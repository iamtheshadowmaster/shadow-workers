---
import Layout from '../../layouts/Layout.astro';
import Nav from '../../components/Nav.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

// Get the slug from the URL
const { slug } = Astro.params;

// Get all blog posts
const allPosts = await getCollection('blog');

// Find the matching post
const entry = allPosts.find(post => post.slug === slug);

if (!entry) {
  return Astro.redirect('/blog');
}

// Render the content
const { Content } = await entry.render();

// Format date helper
const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('en-US', {
    month: 'short',
    day: 'numeric',
    year: 'numeric'
  }).format(date);
};
---

<Layout>
  <Nav />

  <main class="min-h-screen bg-black pt-24 pb-16">
    <div class="mx-auto max-w-4xl px-6 lg:px-8">
      <!-- Breadcrumb -->
      <nav class="text-sm text-gray-500 mb-8">
        <a href="/blog" class="hover:text-white transition-colors">Blog</a>
        <span class="mx-2">/</span>
        <span>{entry.data.category}</span>
      </nav>

      <!-- Article Header -->
      <header class="mb-12">
        <h1 class="text-5xl font-bold text-white mb-6">
          {entry.data.title}
        </h1>

        <div class="flex items-center gap-3 text-gray-400">
          <span>{formatDate(entry.data.date)}</span>
          <span>by</span>
          <span>{entry.data.author}</span>
        </div>
      </header>

      <!-- Article Content -->
      <article class="prose prose-invert prose-lg max-w-none">
        <Content />
      </article>

      <!-- Back to Blog -->
      <div class="mt-16 pt-8 border-t border-gray-800">
        <a
          href="/blog"
          class="inline-flex items-center gap-2 text-gray-400 hover:text-white transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Back to Blog
        </a>
      </div>
    </div>
  </main>
</Layout>

<style is:global>
  /* Custom prose styles for dark theme markdown */
  .prose-invert {
    --tw-prose-body: rgb(229, 231, 235);
    --tw-prose-headings: rgb(255, 255, 255);
    --tw-prose-links: rgb(96, 165, 250);
    --tw-prose-bold: rgb(255, 255, 255);
    --tw-prose-code: rgb(229, 231, 235);
    --tw-prose-pre-bg: rgb(17, 24, 39);
    --tw-prose-quotes: rgb(156, 163, 175);
  }

  .prose h2 {
    color: var(--tw-prose-headings);
    font-weight: 700;
    font-size: 1.875rem;
    margin-top: 2em;
    margin-bottom: 1em;
    line-height: 1.3;
  }

  .prose h3 {
    color: var(--tw-prose-headings);
    font-weight: 600;
    font-size: 1.5rem;
    margin-top: 1.6em;
    margin-bottom: 0.6em;
    line-height: 1.4;
  }

  .prose p {
    color: var(--tw-prose-body);
    margin-top: 1.25em;
    margin-bottom: 1.25em;
    line-height: 1.75;
  }

  .prose a {
    color: var(--tw-prose-links);
    text-decoration: none;
    font-weight: 500;
  }

  .prose a:hover {
    text-decoration: underline;
  }

  .prose strong {
    color: var(--tw-prose-bold);
    font-weight: 600;
  }

  .prose ul, .prose ol {
    margin-top: 1.25em;
    margin-bottom: 1.25em;
    padding-left: 1.625em;
  }

  .prose li {
    margin-top: 0.5em;
    margin-bottom: 0.5em;
    color: var(--tw-prose-body);
  }

  .prose code {
    color: var(--tw-prose-code);
    background-color: rgba(255, 255, 255, 0.1);
    padding: 0.2em 0.4em;
    border-radius: 0.25rem;
    font-size: 0.875em;
    font-weight: 500;
  }

  .prose pre {
    background-color: var(--tw-prose-pre-bg);
    border: 1px solid rgb(55, 65, 81);
    border-radius: 0.5rem;
    padding: 1.5em;
    overflow-x: auto;
    margin-top: 1.75em;
    margin-bottom: 1.75em;
  }

  .prose pre code {
    background-color: transparent;
    padding: 0;
    border-radius: 0;
    font-size: 0.875em;
  }

  .prose blockquote {
    border-left: 4px solid rgb(75, 85, 99);
    padding-left: 1em;
    font-style: italic;
    color: var(--tw-prose-quotes);
    margin-top: 1.6em;
    margin-bottom: 1.6em;
  }

  .prose img {
    border-radius: 0.5rem;
    margin-top: 2em;
    margin-bottom: 2em;
  }

  .prose hr {
    border-color: rgb(55, 65, 81);
    margin-top: 3em;
    margin-bottom: 3em;
  }
</style>
