---
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';
import hateIcon from '../assets/Hate.svg';
import hideIcon from '../assets/Hide.svg';
import painIcon from '../assets/Pain.svg';
import pleaseIcon from '../assets/Please.svg';

// Import Supabase client
import { supabase } from '../lib/supabase';

// Fetch unique categories from the leaderboard table
const { data: categories, error: categoriesError } = await supabase
  .from('leaderboard')
  .select('category')
  .not('category', 'is', null)
  .order('category');

// Extract unique categories
const uniqueCategories = categories ? [...new Set(categories.map(item => item.category))].filter(Boolean) : [];
---

<Layout title="Leaderboard - Shadow">
  <Nav />
  <main class="min-h-screen bg-black pt-24">
    <div class="mx-auto max-w-7xl px-6 lg:px-8 py-12">
      <div class="mx-auto max-w-2xl">
        <div class="flex justify-between items-center mb-8">
          <h1 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">
            Leaderboard
          </h1>
          <button
            id="openSubmitPanel"
            class="rounded-full bg-shadow-blue px-3.5 py-2 text-md font-semibold text-white shadow-sm hover:bg-opacity-90 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-shadow-blue"
          >
            Submit task
          </button>
        </div>
        <p class="text-lg text-gray-300 mb-8">
          Check what fellow workers want to automate, and submit your ideas.
        </p>

        <!-- Filters -->
        <div class="mb-8 flex flex-wrap gap-4 items-center justify-between">
          <!-- Search Bar -->
          <div class="w-full mb-4">
            <div class="relative">
              <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                <svg class="w-4 h-4 text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
                </svg>
              </div>
              <input 
                type="search" 
                id="searchInput" 
                class="block w-full p-3 pl-10 text-sm rounded-lg bg-gray-800 border-gray-700 placeholder-gray-400 text-white focus:ring-shadow-blue focus:border-shadow-blue" 
                placeholder="Search tasks..." 
              />
            </div>
          </div>
          
          <div class="flex flex-wrap gap-3">
            <button 
              class="filter-chip active px-4 py-2 rounded-full bg-gray-800 text-white text-sm font-medium transition-all hover:bg-gray-700" 
              data-sort="newest"
            >
              Recents
            </button>
            <button 
              class="filter-chip px-4 py-2 rounded-full bg-gray-800 text-white text-sm font-medium transition-all hover:bg-gray-700" 
              data-sort="mostUpvotes"
            >
              Hated
            </button>
            <button 
              class="filter-chip px-4 py-2 rounded-full bg-gray-800 text-white text-sm font-medium transition-all hover:bg-gray-700" 
              data-sort="mostDownvotes"
            >
              Sweaters
            </button>
            <button 
              class="filter-chip px-4 py-2 rounded-full bg-gray-800 text-white text-sm font-medium transition-all hover:bg-gray-700" 
              data-sort="mostPlease"
            >
              Fix it
            </button>
            <button 
              class="filter-chip px-4 py-2 rounded-full bg-gray-800 text-white text-sm font-medium transition-all hover:bg-gray-700" 
              data-sort="mostShould"
            >
              Should do
            </button>
            
            <!-- Category filter dropdown -->
            <div class="relative inline-block">
              <button 
                id="categoryFilterButton"
                class="category-dropdown-toggle px-4 py-2 rounded-full bg-gray-800 text-white text-sm font-medium transition-all hover:bg-gray-700 flex items-center gap-2 cursor-pointer"
              >
                <span id="selectedCategory">All jobs</span>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </button>
              <div id="categoryDropdown" class="hidden absolute z-10 mt-2 w-48 rounded-md bg-gray-800 shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none">
                <div class="py-1" role="menu" aria-orientation="vertical" aria-labelledby="categoryFilterButton">
                  <button class="category-option block w-full px-4 py-2 text-left text-sm text-white hover:bg-gray-700 active" data-category="">All jobs</button>
                  {uniqueCategories.map((category) => (
                    <button class="category-option block w-full px-4 py-2 text-left text-sm text-white hover:bg-gray-700" data-category={category}>{category}</button>
                  ))}
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Task List -->
        <div id="taskList" class="space-y-6">
          <!-- Tasks will be dynamically inserted here -->
        </div>
      </div>
    </div>

    <!-- Task Detail Modal -->
    <div id="taskModal" class="fixed inset-0 bg-black bg-opacity-75 flex items-center justify-center z-50 hidden">
      <div class="bg-gray-900 rounded-xl max-w-2xl w-full max-h-[90vh] overflow-y-auto p-8 relative">
        <button
          id="closeTaskModal"
          class="absolute top-4 right-4 text-white hover:text-gray-300 focus:outline-none focus:ring-2 focus:ring-cyan-500 rounded-full p-1"
          aria-label="Close modal"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
        
        <div id="taskModalContent" class="space-y-6">
          <!-- Task details will be inserted here -->
        </div>
        
        <!-- Comments Section -->
        <div class="mt-8 pt-6 border-t border-gray-700">
          <h3 class="text-xl font-semibold text-white mb-4">Comments</h3>
          
          <!-- Comments List -->
          <div id="commentsList" class="space-y-4 mb-6">
            <!-- Comments will be inserted here -->
          </div>
          
          <!-- Comment Form -->
          <form id="commentForm" class="space-y-4">
            <input type="hidden" id="commentTaskId" name="taskId" value="" />
            <div>
              <label for="commentContent" class="block text-sm font-medium text-white mb-1">Comment</label>
              <textarea 
                id="commentContent" 
                name="content" 
                rows="3" 
                class="w-full rounded-md border-0 bg-white/5 px-3.5 py-2 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-cyan-500 sm:text-sm sm:leading-6"
                required
              ></textarea>
            </div>
            <div class="flex justify-end">
              <button
                type="submit"
                class="rounded-full bg-shadow-blue px-3.5 py-2 text-sm font-semibold text-white shadow-sm hover:bg-opacity-90 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-shadow-blue"
              >
                Post Comment
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
    
    <!-- Side Panel for Task Submission -->
    <div id="submitPanel" class="fixed inset-y-0 right-0 w-96 bg-gray-900 p-8 transform translate-x-full transition-transform duration-300 ease-in-out overflow-y-auto shadow-lg z-50 h-full">
      <button
        id="closeSubmitPanel"
        class="absolute top-4 right-4 text-white hover:text-gray-300 focus:outline-none focus:ring-2 focus:ring-cyan-500 rounded-full p-1"
        aria-label="Close panel"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
      <h2 class="text-2xl font-bold text-white mb-6">Submit a Task</h2>
      <form id="taskForm" class="space-y-6">
        <div>
          <label for="title" class="block text-sm font-medium leading-6 text-white">
            Title
          </label>
          <div class="mt-2">
            <input
              type="text"
              name="title"
              id="title"
              required
              placeholder="Enter a clear title for your task"
              class="block w-full rounded-md border-0 bg-white/5 px-3.5 py-2 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-cyan-500 sm:text-sm sm:leading-6"
            />
          </div>
        </div>

        <div>
          <label for="description" class="block text-sm font-medium leading-6 text-white">
            Description
          </label>
          <div class="mt-2">
            <textarea
              id="description"
              name="description"
              rows="4"
              required
              placeholder="Describe the task you'd like to automate"
              class="block w-full rounded-md border-0 bg-white/5 px-3.5 py-2 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-cyan-500 sm:text-sm sm:leading-6"
            ></textarea>
          </div>
        </div>

        <div>
          <label for="category" class="block text-sm font-medium leading-6 text-white">
            Job
          </label>
          <div class="mt-2">
            <select
              id="category"
              name="category"
              required
              class="block w-full rounded-md border-0 bg-white/5 px-3.5 py-2 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-cyan-500 sm:text-sm sm:leading-6"
            >
              <option value="">Select a category</option>
              {uniqueCategories.map((category) => (
                <option value={category}>{category}</option>
              ))}
            </select>
          </div>
        </div>

        <div class="flex justify-end">
          <button
            type="submit"
            class="rounded-full bg-shadow-blue px-3.5 py-2 text-md font-semibold text-white shadow-sm hover:bg-opacity-90 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-shadow-blue"
          >
            Submit
          </button>
        </div>
      </form>
    </div>
  </main>
  <Footer />
</Layout>

<style is:global>
  .task-card {
    @apply bg-gray-800/80 rounded-xl p-6 transition-all duration-200 shadow-lg shadow-gray-900/50 border border-gray-700/30 cursor-pointer;
  }

  .task-card:hover {
    @apply bg-gray-700/80 shadow-xl transform scale-[1.02];
  }

  .reaction-button {
    @apply flex items-center gap-2 rounded-full px-3 py-1.5 text-sm font-medium cursor-pointer hover:bg-white/10;
    position: relative;
  }

  .reaction-button.voted {
    @apply bg-white/20 ring-2 ring-shadow-blue;
    transform: scale(1.05);
  }
  
  /* Tooltip styles */
  .reaction-button .tooltip {
    visibility: hidden;
    position: absolute;
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%);
    background-color: rgba(0, 0, 0, 0.8);
    color: white;
    text-align: center;
    padding: 5px 10px;
    border-radius: 6px;
    white-space: nowrap;
    font-size: 12px;
    margin-bottom: 5px;
    z-index: 1;
    opacity: 0;
    transition: opacity 0.3s;
  }
  
  /* Arrow for tooltip */
  .reaction-button .tooltip::after {
    content: "";
    position: absolute;
    top: 100%;
    left: 50%;
    margin-left: -5px;
    border-width: 5px;
    border-style: solid;
    border-color: rgba(0, 0, 0, 0.8) transparent transparent transparent;
  }
  
  /* Show tooltip on hover */
  .reaction-button:hover .tooltip {
    visibility: visible;
    opacity: 1;
  }
  
  .filter-chip.active {
    background-color: #00BFFF;
    color: #000;
  }
  
  .category-dropdown-toggle {
    cursor: pointer;
  }
  
  .category-dropdown-toggle.active {
    background-color: #00BFFF;
    color: #000;
  }
  
  .category-option {
    cursor: pointer;
  }
  
  .category-option.active {
    background-color: rgba(0, 191, 255, 0.2);
  }
  
  .comments-button {
    @apply text-shadow-blue hover:bg-gray-700/80 border border-gray-700/30;
  }
  
  .comments-button:hover {
    @apply text-white;
  }
</style>

<script>
  import { createClient } from '@supabase/supabase-js';

  // Initialize Supabase client
  const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL;
  const supabaseAnonKey = import.meta.env.PUBLIC_SUPABASE_ANON_KEY;
  const supabase = createClient(supabaseUrl, supabaseAnonKey);

  // DOM Elements
  const taskForm = document.getElementById('taskForm');
  const taskList = document.getElementById('taskList');
  const filterChips = document.querySelectorAll('.filter-chip');
  const openSubmitPanel = document.getElementById('openSubmitPanel');
  const closeSubmitPanel = document.getElementById('closeSubmitPanel');
  const submitPanel = document.getElementById('submitPanel');
  const categoryFilterButton = document.getElementById('categoryFilterButton');
  const categoryDropdown = document.getElementById('categoryDropdown');
  const categoryOptions = document.querySelectorAll('.category-option');
  const selectedCategoryText = document.getElementById('selectedCategory');
  const searchInput = document.getElementById('searchInput');
  
  // Task Modal Elements
  const taskModal = document.getElementById('taskModal');
  const closeTaskModal = document.getElementById('closeTaskModal');
  const taskModalContent = document.getElementById('taskModalContent');
  const commentsList = document.getElementById('commentsList');
  const commentForm = document.getElementById('commentForm');
  const commentTaskId = document.getElementById('commentTaskId');
  let currentTaskId = null;

  // Category dropdown functionality
  let selectedCategory = '';
  let searchQuery = '';

  // Ensure panel is hidden by default
  if (submitPanel) {
    submitPanel.classList.add('translate-x-full');
  }

  // Ensure 'Most recent' filter is active by default
  const defaultFilter = document.querySelector('.filter-chip[data-sort="newest"]');
  if (defaultFilter) {
    filterChips.forEach(c => c.classList.remove('active'));
    defaultFilter.classList.add('active');
  }

  // Load tasks on page load
  loadTasks();
  
  // Pre-fill author name from localStorage if available
  const savedAuthorName = localStorage.getItem('commentAuthorName');
  if (savedAuthorName && document.getElementById('authorName')) {
    (document.getElementById('authorName') as HTMLInputElement).value = savedAuthorName;
  }

  // Event Listeners
  taskForm?.addEventListener('submit', handleSubmit);
  
  // Search input functionality
  searchInput?.addEventListener('input', (e) => {
    searchQuery = (e.target as HTMLInputElement).value.toLowerCase().trim();
    loadTasks();
  });
  
  // Filter chip functionality
  filterChips.forEach(chip => {
    chip.addEventListener('click', () => {
      // Update active state on buttons
      filterChips.forEach(c => c.classList.remove('active'));
      chip.classList.add('active');
      
      // Load tasks with the selected filter
      loadTasks();
    });
  });
  
  // Toggle dropdown visibility
  categoryFilterButton?.addEventListener('click', () => {
    categoryDropdown?.classList.toggle('hidden');
  });
  
  // Close dropdown when clicking outside
  document.addEventListener('click', (e) => {
    if (categoryDropdown && categoryFilterButton && !categoryFilterButton.contains(e.target as Node) && !categoryDropdown.contains(e.target as Node)) {
      categoryDropdown.classList.add('hidden');
    }
  });
  
  // Handle category selection
  categoryOptions.forEach(option => {
    option.addEventListener('click', () => {
      const category = option.getAttribute('data-category') || '';
      selectedCategory = category;
      
      // Update active state on options
      categoryOptions.forEach(opt => opt.classList.remove('active'));
      option.classList.add('active');
      
      // Update button text
      if (selectedCategoryText) {
        selectedCategoryText.textContent = category || 'All jobs';
      }
      
      // Toggle active state on button
      if (category) {
        categoryFilterButton?.classList.add('active');
      } else {
        categoryFilterButton?.classList.remove('active');
      }
      
      // Hide dropdown
      categoryDropdown?.classList.add('hidden');
      
      // Load tasks with the selected filter
      loadTasks();
    });
  });
  
  // Panel open/close functionality
  if (openSubmitPanel) {
    openSubmitPanel.addEventListener('click', () => {
      if (submitPanel) {
        submitPanel.classList.remove('translate-x-full');
      }
    });
  }
  
  if (closeSubmitPanel) {
    closeSubmitPanel.addEventListener('click', () => {
      if (submitPanel) {
        submitPanel.classList.add('translate-x-full');
      }
    });
  }
  
  // Task modal functionality
  if (closeTaskModal) {
    closeTaskModal.addEventListener('click', () => {
      if (taskModal) {
        taskModal.classList.add('hidden');
      }
    });
  }
  
  // Close modal when clicking outside the content
  if (taskModal) {
    taskModal.addEventListener('click', (e) => {
      if (e.target === taskModal) {
        taskModal.classList.add('hidden');
      }
    });
  }
  
  // Comment form submission
  if (commentForm) {
    commentForm.addEventListener('submit', handleCommentSubmit);
  }

  async function handleSubmit(e: Event) {
    e.preventDefault();
    const form = e.target as HTMLFormElement;
    const formData = new FormData(form);

    try {
      const { data, error } = await supabase
        .from('leaderboard')
        .insert([
          {
            title: formData.get('title'),
            description: formData.get('description'),
            category: formData.get('category'),
          }
        ]);

      if (error) throw error;

      form.reset();
      loadTasks();
      submitPanel?.classList.add('translate-x-full');
    } catch (error) {
      console.error('Error submitting task:', error);
    }
  }

  // Helper function to check if user has voted on a task with a specific reaction type
  function hasUserVoted(taskId: string, reactionType: string): boolean {
    try {
      if (!taskId || !reactionType) {
        return false;
      }
      
      const votes = JSON.parse(localStorage.getItem('userVotes') || '{}');
      // Check if this task has any votes and if the specific reaction type is active
      return votes[taskId] && votes[taskId][reactionType] === true;
    } catch (error) {
      console.error('Error checking user votes:', error);
      return false;
    }
  }

  // Helper function to save user's vote
  function saveUserVote(taskId: string, reactionType: string | null): void {
    // Ensure taskId is a string and not a reaction type
    if (!taskId || typeof taskId !== 'string') {
      console.error('Invalid taskId provided to saveUserVote:', taskId);
      return;
    }
    
    // Ensure reactionType is valid
    if (reactionType !== null && typeof reactionType !== 'string') {
      console.error('Invalid reactionType provided to saveUserVote:', reactionType);
      return;
    }
    
    try {
      const votes = JSON.parse(localStorage.getItem('userVotes') || '{}');
      
      // Initialize the task's votes object if it doesn't exist
      if (!votes[taskId]) {
        votes[taskId] = {};
      }
      
      if (reactionType === null) {
        // This case is no longer used, but kept for backward compatibility
        // Now we toggle specific reaction types instead of removing all votes
      } else {
        // Only toggle the vote if it's currently true (removing a vote)
        // or if it's undefined/false (adding a vote for the first time)
        const currentVoteState = votes[taskId][reactionType];
        
        if (currentVoteState === true) {
          // If already voted, remove the vote
          delete votes[taskId][reactionType];
        } else {
          // If not voted yet, first clear any existing votes for this task
          // to ensure only one reaction type can be active at a time
          Object.keys(votes[taskId]).forEach(key => {
            delete votes[taskId][key];
          });
          // Then add the new vote
          votes[taskId][reactionType] = true;
        }
        
        // If no reactions left for this task, clean up the object
        if (Object.keys(votes[taskId]).length === 0) {
          delete votes[taskId];
        }
      }
      
      localStorage.setItem('userVotes', JSON.stringify(votes));
    } catch (error) {
      console.error('Error saving user vote:', error);
    }
  }

  async function loadTasks() {
    if (!taskList) return;

    // Get the sort value from the active filter chip
    const activeChip = document.querySelector('.filter-chip.active');
    const sortValue = activeChip ? activeChip.getAttribute('data-sort') || 'newest' : 'newest';
    let query = supabase.from('leaderboard').select('*');
    
    // Apply category filter if selected
    if (selectedCategory) {
      query = query.eq('category', selectedCategory);
    }

    switch (sortValue) {
      case 'oldest':
        query = query.order('created_at', { ascending: true });
        break;
      case 'mostUpvotes':
        query = query.order('hate', { ascending: false });
        break;
      case 'mostDownvotes':
        query = query.order('sweat', { ascending: false });
        break;
      case 'mostPlease':
        query = query.order('please', { ascending: true });
        break;
      case 'mostShould':
        query = query.order('should', { ascending: true });
        break;
      default: // newest
        query = query.order('created_at', { ascending: false });
    }

    try {
      // Fetch tasks
      const { data: tasks, error } = await query;

      if (error) throw error;

      // For each task, fetch the comment count
      const tasksWithCommentCounts = await Promise.all(tasks.map(async (task) => {
        const { count, error: countError } = await supabase
          .from('comments')
          .select('*', { count: 'exact', head: true })
          .eq('task_id', task.id);
        
        return {
          ...task,
          commentCount: countError ? 0 : count || 0
        };
      }));
      
      // Filter tasks by search query if provided
      const filteredTasks = searchQuery
        ? tasksWithCommentCounts.filter(task => 
            task.title.toLowerCase().includes(searchQuery) || 
            task.description.toLowerCase().includes(searchQuery))
        : tasksWithCommentCounts;

      taskList.innerHTML = filteredTasks
        .map(
          (task) => {
            // Check if user has already voted on this task
            const hasUpvoted = hasUserVoted(task.id, 'up');
            const hasDownvoted = hasUserVoted(task.id, 'down');
            
            return `
            <div class="task-card" data-task-id="${task.id}">
              <div class="flex flex-col sm:flex-row justify-between items-start mb-2">
                <h3 class="text-lg font-semibold text-white mb-2 sm:mb-0">${task.title}</h3>
                <span class="comments-button px-2 py-1 rounded-full bg-gray-800 text-xs font-medium flex items-center gap-1 hover:bg-gray-700 transition-colors" title="Click to view details and comments">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
                  </svg>
                  <span>${task.commentCount}</span>
                </span>
              </div>
              <p class="text-gray-300 mb-4">${task.description}</p>
              <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between">
                <span class="px-3 py-1 text-sm rounded-full bg-gray-800 text-gray-400 mb-2 sm:mb-0">${task.category}</span>
                <div class="flex flex-wrap gap-2">
                  <button class="reaction-button ${hasUserVoted(task.id, 'hate') ? 'voted' : ''}" data-reaction="hate">
                    <span class="tooltip">I hate doing this</span>
                    <img src="/Hate.svg" alt="hate icon" class="h-6 w-6 rounded" />
                    <span>${task.hate || 0}</span>
                  </button>
                  <button class="reaction-button ${hasUserVoted(task.id, 'sweat') ? 'voted' : ''}" data-reaction="sweat">
                    <span class="tooltip">This makes me sweat</span>
                    <img src="/Pain.svg" alt="pain icon" class="h-6 w-6 rounded" />
                    <span>${task.sweat || 0}</span>
                  </button>
                  <button class="reaction-button ${hasUserVoted(task.id, 'please') ? 'voted' : ''}" data-reaction="please">
                    <span class="tooltip">Please fix this</span>
                    <img src="/Please.svg" alt="please icon" class="h-6 w-6 rounded" />
                    <span>${task.please || 0}</span>
                  </button>
                  <button class="reaction-button ${hasUserVoted(task.id, 'should') ? 'voted' : ''}" data-reaction="should">
                    <span class="tooltip">We should do this</span>
                    <img src="/Hide.svg" alt="hide icon" class="h-6 w-6 rounded" />
                    <span>${task.should || 0}</span>
                  </button>
                </div>
              </div>
            </div>
          `;
          }
        )
        .join('');

      // Add reaction event listeners
      document.querySelectorAll('.reaction-button').forEach((button) => {
        if (!button.hasAttribute('disabled')) {
          button.addEventListener('click', handleVote);
        }
      });
      
      // Add click event listeners to task cards for opening the modal
      document.querySelectorAll('.task-card').forEach((card) => {
        card.addEventListener('click', (e) => {
          // Don't open modal if clicking on a reaction button
          if (e.target.closest('.reaction-button')) return;
          
          const taskId = card.dataset.taskId;
          if (taskId) {
            openTaskModal(taskId);
          }
        });
      });
    } catch (error) {
      console.error('Error loading tasks:', error);
    }
  }

  async function handleVote(e: Event) {
    e.stopPropagation(); // Prevent opening the task modal when clicking on reaction buttons
    const button = e.currentTarget as HTMLButtonElement;
    const taskCard = button.closest('.task-card');
    if (!taskCard) {
      console.error('No task card found for this reaction button');
      return;
    }

    const taskId = taskCard.getAttribute('data-task-id');
    const reactionType = button.getAttribute('data-reaction');
    
    if (!taskId) {
      console.error('No task ID found for this task card');
      return;
    }
    
    if (!reactionType) {
      console.error('No reaction type found for this button');
      return;
    }

    try {
      // Get current reaction count
      const { data: currentTask, error: fetchError } = await supabase
        .from('leaderboard')
        .select('*')
        .eq('id', taskId)
        .single();

      if (fetchError) {
        console.error('Error fetching task:', fetchError);
        throw fetchError;
      }

      if (!currentTask) {
        console.error('No task found with ID:', taskId);
        return;
      }

      // Check if user has already reacted with this reaction
      const alreadyVoted = hasUserVoted(taskId, reactionType);
      
      // Calculate new count
      const currentCount = currentTask[reactionType] || 0;
      let newCount;
      
      if (alreadyVoted) {
        // User is toggling off their vote for this reaction
        newCount = Math.max(0, currentCount - 1);
        button.classList.remove('voted');
      } else {
        // User is adding a new vote for this reaction
        newCount = currentCount + 1;
        
        // First, remove 'voted' class from all reaction buttons for this task
        // and update the database counts for any previously voted reaction
        const allReactionButtons = taskCard.querySelectorAll('.reaction-button');
        for (const otherButton of allReactionButtons) {
          const otherReactionType = otherButton.getAttribute('data-reaction');
          if (otherReactionType && otherReactionType !== reactionType && hasUserVoted(taskId, otherReactionType)) {
            // Update UI for the previously voted button
            otherButton.classList.remove('voted');
            
            // Update count in database for the previously voted reaction
            const prevCount = currentTask[otherReactionType] || 0;
            const newPrevCount = Math.max(0, prevCount - 1);
            
            // Update the count in the UI
            const otherCountSpan = otherButton.querySelectorAll('span')[1];
            if (otherCountSpan) {
              otherCountSpan.textContent = String(newPrevCount);
            }
            
            // Update the count in the database
            await supabase
              .from('leaderboard')
              .update({ [otherReactionType]: newPrevCount })
              .eq('id', taskId);
          }
        }
        
        // Now add the 'voted' class to the current button
        button.classList.add('voted');
      }
      
      // Toggle this specific reaction type in localStorage
      saveUserVote(taskId, reactionType);

      // Update the reaction count in the database
      const { error: updateError } = await supabase
        .from('leaderboard')
        .update({ [reactionType]: newCount })
        .eq('id', taskId);

      if (updateError) {
        console.error('Error updating task:', updateError);
        throw updateError;
      }

      // Update UI
      const countSpan = button.querySelectorAll('span')[1];
      if (countSpan) {
        countSpan.textContent = String(newCount);
      }
      
      // We don't need to refresh the entire list immediately
      // This would cause the active state to disappear
      // The button state is already updated with classList.add/remove('voted')
      // and the count is updated in the UI
    } catch (error) {
      console.error('Error updating reaction:', error);
    }
  }
  
