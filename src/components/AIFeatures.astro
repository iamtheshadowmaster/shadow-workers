<!-- AI Features Section - Linear Style -->
<section class="py-32 bg-black">
  <div class="max-w-7xl mx-auto px-6">

    <!-- Section Header -->
    <div class="mb-20 text-center">
      <h2 class="text-5xl md:text-6xl lg:text-7xl font-bold text-white mb-6 leading-[1.1]">
        AI that actually works.
      </h2>
      <p class="text-2xl text-gray-400 font-light max-w-2xl mx-auto">
        No setup. No prompts. Just results.
      </p>
    </div>

    <!-- AI Feature Demo Area with Glass -->
    <div class="relative">
      <!-- Glow -->
      <div class="absolute inset-0 bg-gradient-to-r from-blue-500/20 via-purple-500/20 to-pink-500/20 blur-3xl"></div>

      <div class="relative rounded-3xl overflow-hidden backdrop-blur-2xl bg-white/5 border border-white/10 p-12">
        <div class="max-w-3xl mx-auto">
          <!-- Mock Command Palette -->
          <div class="backdrop-blur-xl bg-white/10 border border-white/20 rounded-2xl shadow-2xl p-6">
            <div class="mb-4">
              <div class="text-gray-500 text-sm mb-2">/Assign to...</div>
            </div>

            <!-- Mock options list -->
            <div class="space-y-2">
              <div class="flex items-center gap-3 p-3 bg-blue-500/10 border border-blue-500/20 rounded-lg">
                <div class="w-8 h-8 rounded-full bg-gradient-to-br from-blue-500 to-purple-500 flex items-center justify-center">
                  <span class="text-white text-xs font-bold">S</span>
                </div>
                <div class="flex-1">
                  <div class="text-white font-medium">Shadow</div>
                  <div class="text-gray-400 text-sm">AI Assistant</div>
                </div>
                <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>

              <div class="flex items-center gap-3 p-3 hover:bg-gray-800/50 rounded-lg transition-colors cursor-pointer">
                <div class="w-8 h-8 rounded-full bg-gray-700 flex items-center justify-center">
                  <span class="text-white text-xs">TM</span>
                </div>
                <div class="flex-1">
                  <div class="text-white">Team Member</div>
                  <div class="text-gray-400 text-sm">Available</div>
                </div>
              </div>

              <div class="flex items-center gap-3 p-3 hover:bg-gray-800/50 rounded-lg transition-colors cursor-pointer">
                <div class="w-8 h-8 rounded-full bg-gray-700 flex items-center justify-center">
                  <span class="text-white text-xs">PM</span>
                </div>
                <div class="flex-1">
                  <div class="text-white">Product Manager</div>
                  <div class="text-gray-400 text-sm">Available</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</section>
