<section id="cta" class="py-48 min-h-screen flex items-center">
  <div class="max-w-2xl mx-auto px-6 text-center">
    <h2 class="text-4xl font-bold text-white mb-6">
      Time to break up with Slack?
    </h2>
    
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center max-w-lg mx-auto">
      <input 
        type="email" 
        placeholder="your@email.com" 
        class="flex-1 px-4 py-3 bg-gray-900 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-white text-base"
      />
      <button class="bg-white text-black px-6 py-3 rounded-lg font-medium hover:bg-gray-100 transition-colors whitespace-nowrap">
        Get early access
      </button>
    </div>
    
    <p class="text-gray-500 text-sm mt-4">
      No spam, just early access when we launch
    </p>
  </div>
</section>
