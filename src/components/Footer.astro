---
const links = [
  { name: 'Slack', href: '/slack' },
  { name: 'Support', href: '/support' },
  { name: 'Privacy Policy', href: '/privacy' },
  { name: 'Terms of Service', href: '/terms' },
]
import backgroundImage from '../assets/Background-3.png';
---

<footer
  class="relative overflow-hidden bg-transparent bg-cover bg-center bg-no-repeat bg-fixed"
  style={`background-image: url(${backgroundImage.src});`}
>
  <div class="relative mx-auto max-w-7xl px-6 py-12 md:flex md:items-center md:justify-between lg:px-8">
    <div class="flex justify-center space-x-6 md:order-2">
      {
        links.map((link) => (
          <a href={link.href} class="text-gray-400 hover:text-shadow-blue transition-colors">
            {link.name}
          </a>
        ))
      }
    </div>
    <div class="mt-8 md:order-1 md:mt-0">
      <p class="text-center text-xs leading-5 text-gray-400">
        &copy; {new Date().getFullYear()} Shadow. All rights reserved baby.
      </p>
    </div>
  </div>
</footer>
