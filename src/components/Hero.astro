---
// No imports needed
---

<section class="hero-section relative min-h-screen flex items-center justify-center overflow-hidden bg-[#111111]">
  <!-- Hero Content Container -->
  <div class="relative z-10 w-full hero-container">
    <!-- Split Layout Grid -->
    <div class="grid lg:grid-cols-2 gap-16 lg:gap-24 items-center">

      <!-- Left Side: Text Content -->
      <div class="flex flex-col justify-center space-y-8">
        <!-- Main Headline -->
        <div>
          <h1 class="text-6xl md:text-5xl lg:text-6xl font-semibold text-white mb-4 leading-tight">
            <span id="decrypted-text" class="inline-block">Hire AI Workers.</span><br>
            <span class="text-white/80 text-lg md:text-xl lg:text-2xl leading-tight">The best teams aren't all human.</span>
          </h1>
          <p class="text-3xl md:text-2xl text-white/70 font-light">
            The first platform to hire, onboard, and manage autonomous AI workers.
          </p>
        </div>

        <!-- CTA Button -->
        <div>
          <a
            href="https://app.yourshadowai.com/sign-up"
            class="inline-flex items-center justify-center px-8 py-4 text-lg font-medium text-black bg-white hover:bg-gray-100 rounded-full transition-all shadow-lg hover:shadow-xl"
          >
            Hire your first worker
          </a>
        </div>
      </div>

      <!-- Right Side: Video -->
      <div class="hidden lg:flex items-center justify-center">
        <div class="relative w-full max-w-md aspect-[3/4] rounded-3xl overflow-hidden shadow-2xl bg-gradient-to-br from-orange-200 to-orange-400">
          <video
            autoplay
            loop
            muted
            playsinline
            class="absolute inset-0 w-full h-full object-cover"
          >
            <source src="/videos/herovid2.mp4" type="video/mp4">
          </video>
        </div>
      </div>

    </div>
  </div>
</section>

<script>
  // Decrypted text animation with fixed-width character spans
  const decryptedTextElement = document.getElementById('decrypted-text');

  if (decryptedTextElement) {
    const originalText = 'Hire AI Workers.';
    const characters = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz!@#$%^&*()_+';
    const speed = 80;
    const maxIterations = 15;
    const waitBetweenLoops = 3000;

    const charSpans: (HTMLSpanElement | null)[] = [];

    const init = () => {
      // Render final text first so the browser uses the correct font
      decryptedTextElement.textContent = originalText;

      // Build character spans, preserving spaces as text nodes for natural word-wrap
      decryptedTextElement.innerHTML = '';

      for (let i = 0; i < originalText.length; i++) {
        const char = originalText[i];

        if (char === ' ') {
          decryptedTextElement.appendChild(document.createTextNode(' '));
          charSpans.push(null);
          continue;
        }

        const span = document.createElement('span');
        span.className = 'char';
        span.textContent = char;
        decryptedTextElement.appendChild(span);
        charSpans.push(span);
      }

      // Measure and lock each character's rendered width
      charSpans.forEach((span) => {
        if (!span) return;
        const width = span.getBoundingClientRect().width;
        span.style.width = width + 'px';
      });
    };

    let interval: number | null = null;
    let iteration = 0;

    const animateText = () => {
      if (iteration >= maxIterations) {
        charSpans.forEach((span, i) => {
          if (span) span.textContent = originalText[i];
        });
        if (interval) clearInterval(interval);

        setTimeout(() => {
          iteration = 0;
          interval = window.setInterval(animateText, speed);
        }, waitBetweenLoops);
        return;
      }

      charSpans.forEach((span, index) => {
        if (!span) return;
        const char = originalText[index];
        if (char === '.') return;

        if (iteration >= maxIterations * (index / originalText.length)) {
          span.textContent = originalText[index];
        } else {
          span.textContent = characters[Math.floor(Math.random() * characters.length)];
        }
      });

      iteration++;
    };

    // Wait for fonts, then init and start
    document.fonts.ready.then(() => {
      init();
      setTimeout(() => {
        interval = window.setInterval(animateText, speed);
      }, 500);
    });
  }
</script>

<style>
  .hero-section {
    padding-top: 6rem; /* Space for fixed nav */
  }

  .hero-container {
    max-width: 1000px;
    margin: 0 auto;
    padding-left: 1.5rem;
    padding-right: 1.5rem;
  }

  /* Mobile: Full viewport height with proper centering */
  @media (max-width: 768px) {
    .hero-section {
      min-height: 100vh;
      min-height: 100svh; /* Safari support */
      display: flex;
      align-items: center;
      justify-content: center;
      padding-top: 100px; /* Nav height */
      padding-bottom: 2rem;
    }

    .hero-container {
      padding-left: 1.25rem;
      padding-right: 1.25rem;
    }
  }

  @media (max-width: 640px) {
    .hero-section {
      padding-top: 85px; /* Smaller nav on very small screens */
      padding-bottom: 1.5rem;
    }

    .hero-container {
      padding-left: 1rem;
      padding-right: 1rem;
    }
  }

  /* Responsive adjustments */
  @media (max-width: 1024px) {
    h1 {
      font-size: 3rem;
      line-height: 1.1;
    }
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 3.75rem;
      line-height: 1.1;
    }
  }

  #decrypted-text {
    font-variant-numeric: tabular-nums;
  }

  #decrypted-text .char {
    display: inline-block;
    text-align: center;
  }
</style>

