<section class="relative min-h-screen flex items-center justify-center overflow-hidden pt-40">
  <!-- Subtle Background -->
  <div class="absolute inset-0 bg-gradient-to-br from-gray-900 via-black to-gray-900"></div>
  
  <!-- Hero Content -->
  <div class="relative z-10 max-w-4xl mx-auto px-6 text-center">
    <!-- Subheadline -->
    <p class="text-gray-400 text-sm mb-16 tracking-wide uppercase">
      The AI-native workspace for humans and agents
    </p>
    
    <!-- Main Headline with Rotating Keywords -->
    <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold text-white mb-20 leading-tight">
      From chaos to 
      <span id="rotating-word" class="bg-gradient-to-r from-blue-400 via-purple-400 to-pink-400 bg-clip-text text-transparent inline-block relative">
        clarity
      </span>
    </h1>
    
    <!-- CTA Button -->
    <div class="mb-24">
      <a href="#cta" class="inline-block bg-white text-black px-8 py-3 rounded-full text-sm font-semibold hover:bg-gray-100 hover:scale-105 transition-all duration-300 shadow-xl">
        Get Shadow
      </a>
    </div>
    
    <!-- Clean Demo Section -->
    <div class="relative max-w-4xl mx-auto">
      <div class="bg-gray-800/30 backdrop-blur-sm rounded-2xl p-6 border border-gray-700/50">
        <div class="bg-black/50 rounded-xl aspect-video overflow-hidden">
          <video 
            autoplay 
            loop 
            muted
            class="w-full h-full object-cover rounded-xl"
            poster=""
          >
            <source src="/videos/first-demo.mp4" type="video/mp4">
            Your browser does not support the video tag.
          </video>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  #rotating-word {
    min-width: 280px;
    text-align: left;
    position: relative;
  }
</style>

<script>
  const words = ['work', 'notes', 'updates', 'tasks'];
  let currentWordIndex = 0;
  let currentCharIndex = 0;
  let isDeleting = false;
  
  function typeWriter() {
    const element = document.getElementById('rotating-word');
    if (!element) return;
    
    const currentWord = words[currentWordIndex];
    
    if (isDeleting) {
      element.textContent = currentWord.substring(0, currentCharIndex - 1);
      currentCharIndex--;
      
      if (currentCharIndex === 0) {
        isDeleting = false;
        currentWordIndex = (currentWordIndex + 1) % words.length;
        setTimeout(typeWriter, 300);
        return;
      }
    } else {
      element.textContent = currentWord.substring(0, currentCharIndex + 1);
      currentCharIndex++;
      
      if (currentCharIndex === currentWord.length) {
        setTimeout(() => {
          isDeleting = true;
          typeWriter();
        }, 2000);
        return;
      }
    }
    
    setTimeout(typeWriter, isDeleting ? 50 : 150);
  }
  
  setTimeout(typeWriter, 2000);
</script>
