---
// No imports needed
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-[#111111] pt-24">
  <!-- Hero Content Container -->
  <div class="relative z-10 w-full" style="max-width: 1000px; margin: 0 auto; padding-left: 1.5rem; padding-right: 1.5rem;">
    <!-- Split Layout Grid -->
    <div class="grid lg:grid-cols-2 gap-16 lg:gap-24 items-center">

      <!-- Left Side: Text Content -->
      <div class="flex flex-col justify-center space-y-8">
        <!-- Main Headline -->
        <div>
          <h1 class="text-6xl md:text-5xl lg:text-6xl font-semibold text-white mb-4 leading-tight">
            <span id="decrypted-text" class="inline-block">Supercharge Claude.</span><br>
            <span class="text-white/80">Zero setup.</span>
          </h1>
          <p class="text-3xl md:text-2xl text-white/70 font-light">
            Discover, create, and deploy Claude skills. All in one place
          </p>
        </div>

        <!-- CTA Button -->
        <div>
          <a
            href="https://app.yourshadowai.com/sign-up"
            class="inline-flex items-center justify-center px-8 py-4 text-lg font-medium text-black bg-white hover:bg-gray-100 rounded-full transition-all shadow-lg hover:shadow-xl"
          >
            Get early access
          </a>
        </div>
      </div>

      <!-- Right Side: Video -->
      <div class="hidden lg:flex items-center justify-center">
        <div class="relative w-full max-w-md aspect-[3/4] rounded-3xl overflow-hidden shadow-2xl bg-gradient-to-br from-orange-200 to-orange-400">
          <video
            autoplay
            loop
            muted
            playsinline
            class="absolute inset-0 w-full h-full object-cover"
          >
            <source src="/videos/herovid2.mp4" type="video/mp4">
          </video>
        </div>
      </div>

    </div>
  </div>
</section>

<script>
  // Decrypted text animation
  const decryptedTextElement = document.getElementById('decrypted-text');

  if (decryptedTextElement) {
    const originalText = 'Supercharge Claude.';
    const characters = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz!@#$%^&*()_+';
    const speed = 80; // milliseconds (slower)
    const maxIterations = 15; // more iterations for smoother effect
    const waitBetweenLoops = 3000; // 3 seconds wait between animations

    let interval: number | null = null;
    let iteration = 0;

    const animateText = () => {
      if (iteration >= maxIterations) {
        decryptedTextElement.textContent = originalText;
        if (interval) clearInterval(interval);

        // Wait 3 seconds, then restart the animation
        setTimeout(() => {
          iteration = 0;
          interval = window.setInterval(animateText, speed);
        }, waitBetweenLoops);
        return;
      }

      const scrambled = originalText
        .split('')
        .map((char, index) => {
          if (char === ' ') return ' ';
          if (char === '.') return '.';

          // Gradually reveal characters
          if (iteration >= maxIterations * (index / originalText.length)) {
            return originalText[index];
          }

          // Random character
          return characters[Math.floor(Math.random() * characters.length)];
        })
        .join('');

      decryptedTextElement.textContent = scrambled;
      iteration++;
    };

    // Start animation on page load
    setTimeout(() => {
      interval = window.setInterval(animateText, speed);
    }, 500);
  }
</script>

<style>
  /* Responsive adjustments */
  @media (max-width: 1024px) {
    h1 {
      font-size: 3rem;
      line-height: 1.1;
    }
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 3.75rem;
      line-height: 1.1;
    }
  }

  #decrypted-text {
    font-variant-numeric: tabular-nums;
  }
</style>

