<nav id="main-nav" class="fixed w-full z-50 bg-transparent border-b border-transparent transition-all duration-300">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-2">
          <img src="/images/logo.svg" alt="Shadow Logo" class="w-24 h-24" />
        </a>
      </div>
      <div class="flex items-center">
        <a
          href="https://app.yourshadowai.com/sign-in"
          class="text-gray-300 hover:text-white mr-4 text-sm transition-all duration-200">
          Log in
        </a>
        <a
          href="https://app.yourshadowai.com/sign-up"
          class="bg-white text-black px-4 py-2 rounded-md text-sm font-semibold hover:bg-gray-100 transition-all duration-200">
          Early access
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  // Add scroll listener to change nav background
  const nav = document.getElementById('main-nav');

  function handleScroll() {
    if (window.scrollY > 50) {
      nav?.classList.add('bg-black/80', 'border-gray-800', 'backdrop-blur-sm');
      nav?.classList.remove('bg-transparent', 'border-transparent');
    } else {
      nav?.classList.remove('bg-black/80', 'border-gray-800', 'backdrop-blur-sm');
      nav?.classList.add('bg-transparent', 'border-transparent');
    }
  }

  // Run on load
  handleScroll();

  // Run on scroll
  window.addEventListener('scroll', handleScroll);
</script>
