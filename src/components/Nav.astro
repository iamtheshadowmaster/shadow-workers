        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  // Add scroll listener to change nav background
  const nav = document.getElementById('main-nav');

  function handleScroll() {
    if (window.scrollY > 50) {
      nav?.classList.add('bg-black/80', 'border-gray-800', 'backdrop-blur-sm');
      nav?.classList.remove('bg-transparent', 'border-transparent');
    } else {
      nav?.classList.remove('bg-black/80', 'border-gray-800', 'backdrop-blur-sm');
      nav?.classList.add('bg-transparent', 'border-transparent');
    }
  }

  // Run on load
  handleScroll();

  // Run on scroll
  window.addEventListener('scroll', handleScroll);
</script>
