---
interface Props {
  title: string;
  subtitle?: string;
  buttonText?: string;
  buttonUrl?: string;
}

const { title, subtitle, buttonText, buttonUrl } = Astro.props;
---

<section class="relative bg-black pt-48 pb-32">
  <div class="max-w-4xl mx-auto px-6 text-center">
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight">
      {title}
    </h1>

    {subtitle && (
      <p class="text-lg md:text-xl text-gray-400 mb-10 max-w-2xl mx-auto leading-relaxed">
        {subtitle}
      </p>
    )}

    {buttonText && buttonUrl && (
      <div class="flex justify-center items-center">
        <a
          href={buttonUrl}
          class="inline-block px-6 py-3 text-base font-semibold text-gray-900 bg-white rounded-xl hover:bg-gray-50 shadow-lg transition-colors"
        >
          {buttonText}
        </a>
      </div>
    )}
  </div>
</section>
