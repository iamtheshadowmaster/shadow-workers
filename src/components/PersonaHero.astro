---
import backgroundImage from '../assets/Background-2.png';

interface Props {
  headline: string;
  subheadline: string;
  persona: string;
  dotColor?: string;
}

const { headline, subheadline, persona, dotColor = 'bg-blue-500' } = Astro.props;
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background image -->
  <div class="absolute inset-0">
    <img src={backgroundImage.src} alt="" class="w-full h-full object-cover" />
  </div>

  <!-- Hero Content -->
  <div class="relative z-10 max-w-6xl mx-auto px-6 text-center">

    <!-- Persona Badge -->
    <div class="inline-flex items-center gap-2 px-4 py-2 bg-white rounded-full mb-8">
      <div class={`w-2 h-2 rounded-full ${dotColor}`}></div>
      <span class="text-sm font-medium text-black uppercase tracking-wider">{persona}</span>
    </div>

    <!-- Main Headline -->
    <h1 class="text-3xl md:text-5xl lg:text-6xl font-medium text-white mb-8 leading-tight tracking-tight max-w-5xl mx-auto">
      {headline}
    </h1>

    <!-- Subheadline -->
    <p class="text-lg md:text-2xl text-white/80 mb-12 max-w-3xl mx-auto font-normal leading-relaxed">
      {subheadline}
    </p>

    <!-- CTA Button -->
    <div class="flex items-center justify-center">
      <a
        href="https://app.yourshadowai.com/sign-up"
        class="px-6 py-2.5 bg-white text-black rounded-lg text-sm font-semibold hover:bg-gray-100 transition-all duration-200 shadow-lg"
      >
        Get early access
      </a>
    </div>
  </div>
</section>
