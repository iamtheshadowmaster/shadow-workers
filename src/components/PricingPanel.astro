<style>
  /* Animations from design system */
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes pulse-slow {
    0%, 100% { opacity: 0.3; transform: scale(1); }
    50% { opacity: 0.5; transform: scale(1.1); }
  }

  @keyframes pulse-slow-delayed {
    0%, 100% { opacity: 0.2; transform: scale(1); }
    50% { opacity: 0.4; transform: scale(1.15); }
  }

  @keyframes pulse-gentle {
    0%, 100% { opacity: 0.8; }
    50% { opacity: 1; }
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out;
  }

  .animate-pulse-slow {
    animation: pulse-slow 8s ease-in-out infinite;
  }

  .animate-pulse-slow-delayed {
    animation: pulse-slow-delayed 10s ease-in-out infinite;
  }

  .animate-pulse-gentle {
    animation: pulse-gentle 2s ease-in-out infinite;
  }

  @keyframes gradient-x {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  .animate-gradient-x {
    background-size: 200% 200%;
    animation: gradient-x 3s ease infinite;
  }

  /* Pricing cards stagger animation */
  #pricing-section .grid > div:nth-child(1) {
    animation: fade-in-up 0.6s ease-out 0.1s both;
  }

  #pricing-section .grid > div:nth-child(2) {
    animation: fade-in-up 0.6s ease-out 0.2s both;
  }

  #pricing-section .grid > div:nth-child(3) {
    animation: fade-in-up 0.6s ease-out 0.3s both;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    #pricing-section {
      padding-top: 4rem;
      padding-bottom: 4rem;
    }
  }
</style>

