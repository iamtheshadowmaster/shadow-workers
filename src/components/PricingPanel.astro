  soloTab?.addEventListener('click', () => {
    soloTab.classList.add('active');
    teamTab?.classList.remove('active');
    soloPlans?.classList.remove('hidden');
    soloPlans?.classList.add('grid');
    teamPlans?.classList.remove('grid');
    teamPlans?.classList.add('hidden');
  });

