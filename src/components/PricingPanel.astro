    display: none;
  }
</style>

<script>
  const toggleDaily = document.getElementById('toggle-daily');
  const toggleMission = document.getElementById('toggle-mission');
  const dailyContent = document.getElementById('freelance-daily');
  const missionContent = document.getElementById('freelance-mission');
  const dailyFeatures = document.getElementById('features-daily');
  const missionFeatures = document.getElementById('features-mission');

  function setMode(mode: 'daily' | 'mission') {
    const isDaily = mode === 'daily';

    // Toggle content
    dailyContent?.classList.toggle('hidden', !isDaily);
    missionContent?.classList.toggle('hidden', isDaily);
    dailyFeatures?.classList.toggle('hidden', !isDaily);
    missionFeatures?.classList.toggle('hidden', isDaily);

    // Toggle button styles
    if (isDaily) {
      toggleDaily?.classList.add('bg-teal-500/20', 'text-teal-300', 'border', 'border-teal-500/30');
      toggleDaily?.classList.remove('text-gray-400');
      toggleMission?.classList.remove('bg-teal-500/20', 'text-teal-300', 'border', 'border-teal-500/30');
      toggleMission?.classList.add('text-gray-400');
    } else {
      toggleMission?.classList.add('bg-teal-500/20', 'text-teal-300', 'border', 'border-teal-500/30');
      toggleMission?.classList.remove('text-gray-400');
      toggleDaily?.classList.remove('bg-teal-500/20', 'text-teal-300', 'border', 'border-teal-500/30');
      toggleDaily?.classList.add('text-gray-400');
    }
  }

  toggleDaily?.addEventListener('click', () => setMode('daily'));
  toggleMission?.addEventListener('click', () => setMode('mission'));
</script>
