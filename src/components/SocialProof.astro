<!-- Social Proof with Glass Effect -->
<section class="relative py-32 bg-black overflow-hidden">

  <!-- Ambient background -->
  <div class="absolute top-0 left-1/4 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl"></div>

  <div class="relative max-w-7xl mx-auto px-6">

    <!-- Top Text -->
    <div class="text-center mb-20">
      <h2 class="text-5xl md:text-6xl font-bold text-white mb-6">
        Trusted by teams that ship.
      </h2>
      <p class="text-xl text-gray-400 max-w-2xl mx-auto font-light">
        From next-gen startups to established leaders.
      </p>
    </div>

    <!-- Logo Grid with glass cards -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-32">
      <div class="backdrop-blur-xl bg-white/5 border border-white/10 rounded-2xl p-8 flex items-center justify-center hover:bg-white/10 transition-all duration-300">
        <div class="text-gray-400 text-lg font-medium">Company</div>
      </div>
      <div class="backdrop-blur-xl bg-white/5 border border-white/10 rounded-2xl p-8 flex items-center justify-center hover:bg-white/10 transition-all duration-300">
        <div class="text-gray-400 text-lg font-medium">Company</div>
      </div>
      <div class="backdrop-blur-xl bg-white/5 border border-white/10 rounded-2xl p-8 flex items-center justify-center hover:bg-white/10 transition-all duration-300">
        <div class="text-gray-400 text-lg font-medium">Company</div>
      </div>
      <div class="backdrop-blur-xl bg-white/5 border border-white/10 rounded-2xl p-8 flex items-center justify-center hover:bg-white/10 transition-all duration-300">
        <div class="text-gray-400 text-lg font-medium">Company</div>
      </div>
    </div>

    <!-- Made for Section -->
    <div class="grid md:grid-cols-2 gap-20 items-center">
      <div>
        <h2 class="text-5xl md:text-6xl lg:text-7xl font-bold text-white mb-4 leading-[1.1]">
          Built for winners.
        </h2>
        <p class="text-2xl text-gray-500 font-light">Not busywork.</p>
      </div>

      <div>
        <p class="text-xl text-gray-400 leading-relaxed mb-8 font-light">
          Relentless focus. Fast execution. Real results.
        </p>
        <a href="#learn-more" class="inline-flex items-center gap-2 text-white text-lg font-medium hover:text-gray-300 transition-colors group">
          See our principles
          <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>

  </div>
</section>
