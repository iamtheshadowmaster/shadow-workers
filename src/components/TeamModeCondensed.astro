<section class="relative bg-[#111111] py-24">
  <div class="max-w-7xl mx-auto px-6">
    <!-- Title -->
    <div class="text-center mb-20">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-white rounded-full mb-6">
        <div class="w-2 h-2 rounded-full bg-purple-500"></div>
        <span class="text-sm font-medium text-black uppercase tracking-wider">For Teams</span>
      </div>
      <h2 class="text-xl md:text-3xl lg:text-4xl font-medium text-white mb-6 leading-tight tracking-tight">
        Deploy skills across your entire team
      </h2>
    </div>

    <!-- 4 Feature Panels - Stacked -->
    <div class="space-y-24">

      <!-- Feature 1: Discover Skills -->
      <div class="feature-row">
        <div class="feature-content">
          <div class="feature-number">01</div>
          <h3 class="feature-title">Discover Skills</h3>
          <p class="feature-description">
            Get recommended skills based on your profile and company. Browse a curated library of capabilities tailored to your role and industry.
          </p>
        </div>
        <div class="feature-visual">
          <div class="visual-placeholder">
            <!-- Placeholder for skill discovery visual -->
            <div class="placeholder-content">Skill Discovery Visual</div>
          </div>
        </div>
      </div>

      <!-- Feature 2: Vibe Code Skills -->
      <div class="feature-row">
        <div class="feature-content">
          <div class="feature-number">02</div>
          <h3 class="feature-title">Vibe Code Skills</h3>
          <p class="feature-description">
            Build custom skills by just talking to Shadow. Describe what you need in plain language, and we'll create the perfect skill for your workflow.
          </p>
        </div>
        <div class="feature-visual">
          <div class="visual-placeholder">
            <!-- Placeholder for vibe coding visual -->
            <div class="placeholder-content">Vibe Coding Visual</div>
          </div>
        </div>
      </div>

      <!-- Feature 3: One-Click Install -->
      <div class="feature-row">
        <div class="feature-content">
          <div class="feature-number">03</div>
          <h3 class="feature-title">One-Click Install</h3>
          <p class="feature-description">
            Install skills to Claude instantly with our Chrome extension. No technical knowledge requiredâ€”start using your new capabilities in seconds.
          </p>
        </div>
        <div class="feature-visual">
          <div class="visual-placeholder">
            <!-- Placeholder for installation visual -->
            <div class="placeholder-content">One-Click Install Visual</div>
          </div>
        </div>
      </div>

      <!-- Feature 4: Manage Team Deployment -->
      <div class="feature-row">
        <div class="feature-content">
          <div class="feature-number">04</div>
          <h3 class="feature-title">Manage Team Deployment</h3>
          <p class="feature-description">
            Deploy skills across your entire team with our management tool. Install to dedicated teams, update all skills at once, and maintain consistency.
          </p>
        </div>
        <div class="feature-visual">
          <div class="visual-placeholder">
            <!-- Placeholder for team management visual -->
            <div class="placeholder-content">Team Management Visual</div>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>

<style>
  /* Feature Row Layout */
  .feature-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  /* Feature Content (Left Side) */
  .feature-content {
    position: relative;
  }

  .feature-number {
    font-size: 6rem;
    font-weight: 700;
    color: rgba(255, 255, 255, 0.03);
    line-height: 1;
    margin-bottom: 1rem;
  }

  .feature-title {
    font-size: 2rem;
    font-weight: 600;
    color: white;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .feature-description {
    font-size: 1.125rem;
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.7;
    max-width: 500px;
  }

  /* Feature Visual (Right Side) */
  .feature-visual {
    position: relative;
  }

  .visual-placeholder {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.05) 0%, rgba(255, 255, 255, 0.02) 100%);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 1.5rem;
    padding: 3rem;
    min-height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .visual-placeholder:hover {
    border-color: rgba(255, 107, 53, 0.3);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
  }

  .placeholder-content {
    color: rgba(255, 255, 255, 0.3);
    font-size: 1.25rem;
    text-align: center;
  }

  /* Responsive adjustments */
  @media (max-width: 1024px) {
    .feature-row {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .feature-number {
      font-size: 4rem;
    }

    .feature-title {
      font-size: 1.75rem;
    }

    .feature-description {
      font-size: 1rem;
      max-width: 100%;
    }

    .visual-placeholder {
      min-height: 300px;
      padding: 2rem;
    }
  }

  @media (max-width: 768px) {
    .feature-number {
      font-size: 3rem;
    }

    .feature-title {
      font-size: 1.5rem;
    }

    .visual-placeholder {
      min-height: 250px;
      padding: 1.5rem;
    }
  }
</style>
