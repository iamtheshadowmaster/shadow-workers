---
import { supabase } from '../lib/supabase';
// Remove the Icon import since we'll use SVG directly
// import Icon from 'astro-icon';

// This will be populated with data from Supabase
let useCases = [];
let categories = [];
let error = null;

// Fetch use cases directly from Supabase
try {
  // Fetch all use cases from the database
  const { data, error: supabaseError } = await supabase
    .from('use_cases')
    .select('*')
    .order('display_order', { ascending: true });

  if (supabaseError) {
    error = supabaseError.message;
    console.error('Supabase error:', supabaseError);
  } else {
    useCases = data || [];
    // Extract unique categories for filtering
    categories = [...new Set(useCases.map(useCase => useCase.category))];
  }
} catch (err) {
  error = 'Failed to load use cases';
  console.error('Error fetching use cases:', err);
}
---

<section class="py-16 sm:py-24">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center mb-16">
      <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">
        What can Shadow do for you?
      </h2>
      <p class="mt-4 text-xl text-shadow-blue font-semibold">
        Explore the many ways Shadow can transform your workflow
      </p>
    </div>

    {error ? (
      <div class="text-center py-12">
        <p class="text-red-400">{error}</p>
        <p class="text-gray-400 mt-2">Please try again later</p>
      </div>
    ) : (
      <>
        <!-- Category filter chips -->
        <div class="flex flex-wrap justify-center gap-3 mb-12">
          <button 
            class="category-filter active px-4 py-2 rounded-full bg-gray-800 text-white text-sm font-medium transition-all hover:bg-gray-700" 
            data-category="all"
          >
            All
          </button>
          {categories.map(category => (
            <button 
              class="category-filter px-4 py-2 rounded-full bg-gray-800 text-white text-sm font-medium transition-all hover:bg-gray-700" 
              data-category={category}
            >
              {category}
            </button>
          ))}
        </div>

        <!-- Featured use cases (larger cards) -->
        {useCases.some(useCase => useCase.is_featured) && (
          <div class="featured-section mb-16">
            <h3 class="text-2xl font-bold text-white text-center mb-8">Featured Use Cases</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
              {useCases
                .filter(useCase => useCase.is_featured)
                .map(useCase => (
                  <div class="use-case-card featured-card" data-category={useCase.category}>
                    <div class="bg-gradient-to-br from-[#0d1117] to-[#121a29] rounded-xl overflow-hidden border border-blue-800 h-full transition-all hover:border-blue-600 hover:shadow-lg hover:shadow-blue-900/30">
                      <div class="p-8">
                        <div class="flex items-start justify-between mb-4">
                          <div class="text-4xl text-blue-400 icon-container relative">
                            <div class="triangle-bg absolute"></div>
                            <div class="triangle-bg-blue absolute"></div>
                            <div class="triangle-bg-pink absolute"></div>
                            {typeof useCase.icon === 'string' && useCase.icon.startsWith('<svg') ? (
                              <div set:html={useCase.icon} class="relative z-10" />
                            ) : (
                              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-10 h-10 relative z-10">
                                <path d={useCase.icon}></path>
                              </svg>
                            )}
                          </div>
                          <span class="px-3 py-1 text-xs font-medium bg-blue-900/60 text-blue-200 rounded-full">
                            {useCase.category}
                          </span>
                        </div>
                        <h3 class="text-2xl font-semibold text-white mb-3">
                          {useCase.title}
                        </h3>
                        <p class="text-md text-blue-300 mb-3">
                          {useCase.subtitle}
                        </p>
                        <p class="text-gray-200 mb-6 text-lg">
                          {useCase.description}
                        </p>
                      </div>
                    </div>
                  </div>
                ))}
            </div>
          </div>
        )}

        <!-- All use cases grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {useCases.map(useCase => (
            <div class="use-case-card" data-category={useCase.category}>
              <div class="bg-[#0d1117] rounded-xl overflow-hidden border border-gray-800 h-full transition-all hover:border-gray-600 hover:shadow-lg hover:shadow-blue-900/20">
                <div class="p-6">
                  <div class="flex items-start justify-between mb-4">
                    <div class="text-3xl text-blue-400 icon-container relative">
                      <div class="triangle-bg absolute"></div>
                      <div class="triangle-bg-blue absolute"></div>
                      <div class="triangle-bg-pink absolute"></div>
                      {typeof useCase.icon === 'string' && useCase.icon.startsWith('hero-') ? (
                        <span class="relative z-10">Icon: {useCase.icon}</span>
                      ) : typeof useCase.icon === 'string' && useCase.icon.startsWith('<svg') ? (
                        <div set:html={useCase.icon} class="relative z-10" />
                      ) : typeof useCase.icon === 'string' && useCase.icon.includes('<path') ? (
                        <div class="relative z-10">{useCase.icon}</div>
                      ) : typeof useCase.icon === 'string' && useCase.icon.length > 0 && !useCase.icon.startsWith('<') ? (
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-8 h-8 relative z-10">
                          <path d={useCase.icon}></path>
                        </svg>
                      ) : (
                        <div class="relative z-10">{useCase.icon}</div>
                      )}
                    </div>
                    <span class="px-2 py-0.5 text-xs font-medium bg-gray-700/40 text-gray-300 rounded-full">
                      {useCase.category}
                    </span>
                  </div>
                  <h3 class="text-xl font-semibold text-white mb-2">
                    {useCase.title}
                  </h3>
                  <p class="text-sm text-gray-400 mb-2">
                    {useCase.subtitle}
                  </p>
                  <p class="text-gray-300 mb-6">
                    {useCase.description}
                  </p>

                </div>
              </div>
            </div>
          ))}
        </div>
      </>
    )}
  </div>
</section>

<style>
  .text-shadow-blue {
    color: #00BFFF;
    text-shadow: 0 0 10px rgba(0, 191, 255, 0.5);
  }

  .category-filter.active {
    background-color: #00BFFF;
    color: #000;
  }
  
  .icon-container {
    padding: 8px;
  }
  
  .triangle-bg,
  .triangle-bg-blue,
  .triangle-bg-pink {
    width: 40px;
    height: 40px;
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    top: -5px;
    left: -5px;
    transition: all 0.3s ease;
  }

  .triangle-bg {
    background-image: url('/src/assets/triangle-bg.svg');
    z-index: 3;
    opacity: 1;
  }

  .triangle-bg-blue {
    background-image: url('/src/assets/triangle-bg-blue.svg');
    z-index: 2;
    opacity: 0;
  }

  .triangle-bg-pink {
    background-image: url('/src/assets/triangle-bg-pink.svg');
    z-index: 1;
    opacity: 0;
  }

  .use-case-card:hover .triangle-bg {
    opacity: 1;
    z-index: 3;
  }
  .use-case-card:hover .triangle-bg-pink {
    opacity: 1;
    transform: translate(-1px, 2px);
    z-index: 1;
  }

  .use-case-card:hover .triangle-bg-blue {
    opacity: 1;
    transform: translate(-1px, 2px);
    z-index: 2;

  }

  .use-case-card:hover .triangle-bg-pink {
    opacity: 1;
  }
</style>

<script>
  function setupCategoryFilters() {
    const filterButtons = document.querySelectorAll('.category-filter');
    const useCaseCards = document.querySelectorAll('.use-case-card');
    const featuredSection = document.querySelector('.featured-section');

    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        // Update active state on buttons
        filterButtons.forEach(btn => btn.classList.remove('active'));
        button.classList.add('active');

        const selectedCategory = button.getAttribute('data-category');

        // Count visible featured cards to determine if we should show the featured section
        let visibleFeaturedCount = 0;

        // Show/hide cards based on category
        useCaseCards.forEach(card => {
          const cardCategory = card.getAttribute('data-category');
          const isFeatured = card.classList.contains('featured-card');
          
          if (selectedCategory === 'all' || cardCategory === selectedCategory) {
            card.style.display = 'block';
            if (isFeatured) visibleFeaturedCount++;
          } else {
            card.style.display = 'none';
          }
        });

        // Hide featured section if no featured cards are visible for the selected category
        if (featuredSection && visibleFeaturedCount === 0) {
          featuredSection.style.display = 'none';
        } else if (featuredSection) {
          featuredSection.style.display = 'block';
        }
      });
    });
  }

  // Run on page load
  document.addEventListener('DOMContentLoaded', setupCategoryFilters);
  
  // Run when Astro swaps pages
  document.addEventListener('astro:page-load', setupCategoryFilters);
</script>