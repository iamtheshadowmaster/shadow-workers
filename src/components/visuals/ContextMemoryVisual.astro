---
import shadowIcon from '../../assets/128x128.png';
import notionIcon from '../../assets/notion.png';
import gmailIcon from '../../assets/gmail.png';
const shadowIconSrc = shadowIcon.src;
const notionIconSrc = notionIcon.src;
const gmailIconSrc = gmailIcon.src;
---

<style>
  @keyframes pulse-dot {
    0%, 100% { opacity: 0.4; }
    50% { opacity: 1; }
  }

  @keyframes flow-right {
    0% { transform: translateX(0); opacity: 0; }
    20% { opacity: 1; }
    80% { opacity: 1; }
    100% { transform: translateX(100%); opacity: 0; }
  }

  @keyframes sync-spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .flow-dot {
    animation: flow-right 2.5s ease-in-out infinite;
  }

  .flow-dot-delayed-1 { animation-delay: 0.8s; }
  .flow-dot-delayed-2 { animation-delay: 1.6s; }

  .sync-icon {
    animation: sync-spin 3s linear infinite;
  }

  .pulse-green {
    animation: pulse-dot 2s ease-in-out infinite;
  }
</style>

<div class="rounded-2xl bg-white p-6 sm:p-8 h-[600px] flex items-center justify-center border border-gray-100 relative overflow-hidden">
  <div class="w-full max-w-lg">

    <!-- Sources section -->
    <div class="mb-5">
      <div class="text-[11px] font-semibold text-gray-400 uppercase tracking-wider mb-3">Sources</div>
      <div class="grid grid-cols-2 gap-2.5">
        <!-- Notion -->
        <div class="flex items-center gap-2.5 px-3 py-2.5 rounded-lg bg-gray-50 border border-gray-200">
          <div class="w-7 h-7 bg-white rounded-md flex items-center justify-center p-1 border border-gray-100 flex-shrink-0">
            <img src={notionIconSrc} alt="Notion" class="w-full h-full object-contain" />
          </div>
          <div class="min-w-0">
            <div class="text-xs font-medium text-gray-900">Notion</div>
            <div class="text-[10px] text-gray-400">Docs & wikis</div>
          </div>
        </div>

        <!-- Gmail -->
        <div class="flex items-center gap-2.5 px-3 py-2.5 rounded-lg bg-gray-50 border border-gray-200">
          <div class="w-7 h-7 bg-white rounded-md flex items-center justify-center p-1 border border-gray-100 flex-shrink-0">
            <img src={gmailIconSrc} alt="Gmail" class="w-full h-full object-contain" />
          </div>
          <div class="min-w-0">
            <div class="text-xs font-medium text-gray-900">Gmail</div>
            <div class="text-[10px] text-gray-400">Emails & threads</div>
          </div>
        </div>

        <!-- Slack -->
        <div class="flex items-center gap-2.5 px-3 py-2.5 rounded-lg bg-gray-50 border border-gray-200">
          <div class="w-7 h-7 bg-[#4a154b] rounded-md flex items-center justify-center flex-shrink-0">
            <svg class="w-4 h-4 text-white" viewBox="0 0 24 24" fill="currentColor">
              <path d="M6 15a2 2 0 0 1-2 2a2 2 0 0 1-2-2a2 2 0 0 1 2-2h2v2zm1 0a2 2 0 0 1 2-2a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2a2 2 0 0 1-2-2v-5zM9 6a2 2 0 0 1-2-2a2 2 0 0 1 2-2a2 2 0 0 1 2 2v2H9zm0 1a2 2 0 0 1 2 2a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2a2 2 0 0 1 2-2h5zm9 2a2 2 0 0 1 2-2a2 2 0 0 1 2 2a2 2 0 0 1-2 2h-2V9zm-1 0a2 2 0 0 1-2 2a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2a2 2 0 0 1 2 2v5zm-2 9a2 2 0 0 1 2 2a2 2 0 0 1-2 2a2 2 0 0 1-2-2v-2h2zm0-1a2 2 0 0 1-2-2a2 2 0 0 1 2-2h5a2 2 0 0 1 2 2a2 2 0 0 1-2 2h-5z"/>
            </svg>
          </div>
          <div class="min-w-0">
            <div class="text-xs font-medium text-gray-900">Slack</div>
            <div class="text-[10px] text-gray-400">Messages</div>
          </div>
        </div>

        <!-- Web / Spreadsheets -->
        <div class="flex items-center gap-2.5 px-3 py-2.5 rounded-lg bg-gray-50 border border-gray-200">
          <div class="w-7 h-7 bg-gray-100 rounded-md flex items-center justify-center flex-shrink-0">
            <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 2a10 10 0 1 0 0 20 10 10 0 0 0 0-20z"/>
              <path d="M2 12h20"/>
              <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>
            </svg>
          </div>
          <div class="min-w-0">
            <div class="text-xs font-medium text-gray-900">Web & more</div>
            <div class="text-[10px] text-gray-400">Sheets, sites, ...</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Flow indicator -->
    <div class="flex items-center justify-center gap-1 py-3">
      <div class="relative w-32 h-[2px] bg-gray-100 rounded-full overflow-hidden">
        <div class="absolute top-0 left-0 w-3 h-full bg-gray-900 rounded-full flow-dot"></div>
        <div class="absolute top-0 left-0 w-3 h-full bg-gray-900 rounded-full flow-dot flow-dot-delayed-1"></div>
        <div class="absolute top-0 left-0 w-3 h-full bg-gray-900 rounded-full flow-dot flow-dot-delayed-2"></div>
      </div>
      <svg class="w-3 h-3 text-gray-300 -ml-0.5" fill="currentColor" viewBox="0 0 24 24">
        <path d="M5 12h14m-4-4 4 4-4 4"/>
      </svg>
    </div>

    <!-- Worker memory database -->
    <div class="rounded-xl border border-gray-200 bg-white shadow-sm overflow-hidden">
      <!-- Header -->
      <div class="px-4 py-3 border-b border-gray-100 flex items-center justify-between">
        <div class="flex items-center gap-2.5">
          <div class="w-6 h-6 rounded-md overflow-hidden flex-shrink-0">
            <img src={shadowIconSrc} alt="Shadow" class="w-full h-full object-cover" />
          </div>
          <div>
            <div class="text-sm font-semibold text-gray-900">Worker memory</div>
          </div>
        </div>
        <div class="flex items-center gap-1.5">
          <svg class="w-3 h-3 text-green-500 sync-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 12a9 9 0 0 1-9 9m9-9a9 9 0 0 0-9-9m9 9H3m0 0a9 9 0 0 1 9-9m-9 9a9 9 0 0 0 9 9"/>
          </svg>
          <span class="text-[10px] text-green-600 font-medium">Auto-syncing</span>
        </div>
      </div>

      <!-- Memory entries -->
      <div class="divide-y divide-gray-50">
        <div class="px-4 py-2.5 flex items-center justify-between">
          <div class="flex items-center gap-2">
            <div class="w-1.5 h-1.5 rounded-full bg-purple-400"></div>
            <span class="text-xs text-gray-700">Company is B2B SaaS, Series A</span>
          </div>
          <span class="text-[10px] text-gray-300">via Notion</span>
        </div>
        <div class="px-4 py-2.5 flex items-center justify-between">
          <div class="flex items-center gap-2">
            <div class="w-1.5 h-1.5 rounded-full bg-blue-400"></div>
            <span class="text-xs text-gray-700">Q1 goal: reach 500 customers</span>
          </div>
          <span class="text-[10px] text-gray-300">via Notion</span>
        </div>
        <div class="px-4 py-2.5 flex items-center justify-between">
          <div class="flex items-center gap-2">
            <div class="w-1.5 h-1.5 rounded-full bg-amber-400"></div>
            <span class="text-xs text-gray-700">CEO prefers async communication</span>
          </div>
          <span class="text-[10px] text-gray-300">via Slack</span>
        </div>
        <div class="px-4 py-2.5 flex items-center justify-between">
          <div class="flex items-center gap-2">
            <div class="w-1.5 h-1.5 rounded-full bg-green-400"></div>
            <span class="text-xs text-gray-700">Main product: analytics dashboard</span>
          </div>
          <span class="text-[10px] text-gray-300">via Web</span>
        </div>
        <div class="px-4 py-2.5 flex items-center justify-between">
          <div class="flex items-center gap-2">
            <div class="w-1.5 h-1.5 rounded-full bg-pink-400"></div>
            <span class="text-xs text-gray-700">Team size: 12 people, 3 engineers</span>
          </div>
          <span class="text-[10px] text-gray-300">via Slack</span>
        </div>
      </div>

      <!-- Footer -->
      <div class="px-4 py-2.5 bg-gray-50 border-t border-gray-100 flex items-center justify-between">
        <div class="flex items-center gap-1.5">
          <div class="w-1.5 h-1.5 rounded-full bg-green-500 pulse-green"></div>
          <span class="text-[10px] text-gray-400">Last synced 2 min ago</span>
        </div>
        <span class="text-[10px] text-gray-400">23 facts stored</span>
      </div>
    </div>

  </div>
</div>
