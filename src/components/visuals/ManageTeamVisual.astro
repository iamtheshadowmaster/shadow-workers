---
// No imports needed
---

<div class="rounded-2xl bg-white p-6 sm:p-8 h-[600px] flex items-center justify-center border border-gray-100 relative overflow-hidden">
  <!-- Content wrapper -->
  <div class="w-full max-w-lg space-y-0">
    <!-- Title -->
    <div class="mb-6 flex items-baseline gap-2">
      <h3 class="text-lg font-semibold text-gray-900">Your team</h3>
      <span class="text-sm text-gray-500">- 18 members</span>
    </div>
    <!-- John Davis - Expanded -->
    <div class="border-b border-gray-100">
      <div class="flex items-center justify-between py-3 cursor-pointer">
        <div class="flex items-center gap-3">
          <div class="w-8 h-8 rounded-full bg-gray-900 flex items-center justify-center">
            <span class="text-xs font-medium text-white">JD</span>
          </div>
          <div class="flex items-center gap-2">
            <div class="text-sm font-medium text-gray-900">John Davis</div>
            <span class="px-2 py-0.5 text-xs font-medium bg-purple-100 text-purple-700 rounded-full">Product</span>
          </div>
        </div>
        <svg class="w-4 h-4 text-gray-400 rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
      </div>

      <!-- Expanded Skills Section -->
      <div class="pl-11 pb-4 space-y-2">
        <!-- Skill 1 -->
        <div class="flex items-center justify-between py-2 px-3 bg-gray-50 rounded-lg">
          <span class="text-sm text-gray-700">frontend-design</span>
          <label class="relative inline-block w-10 h-5 cursor-pointer">
            <input type="checkbox" checked class="sr-only peer" />
            <div class="w-10 h-5 bg-gray-300 rounded-full peer peer-checked:bg-gray-900 after:content-[''] after:absolute after:top-0.5 after:left-0.5 after:bg-white after:rounded-full after:h-4 after:w-4 after:transition-all peer-checked:after:translate-x-5"></div>
          </label>
        </div>

        <!-- Skill 2 -->
        <div class="flex items-center justify-between py-2 px-3 bg-gray-50 rounded-lg">
          <span class="text-sm text-gray-700">web-design-guidelines</span>
          <label class="relative inline-block w-10 h-5 cursor-pointer">
            <input type="checkbox" checked class="sr-only peer" />
            <div class="w-10 h-5 bg-gray-300 rounded-full peer peer-checked:bg-gray-900 after:content-[''] after:absolute after:top-0.5 after:left-0.5 after:bg-white after:rounded-full after:h-4 after:w-4 after:transition-all peer-checked:after:translate-x-5"></div>
          </label>
        </div>

        <!-- Skill 3 -->
        <div class="flex items-center justify-between py-2 px-3 bg-gray-50 rounded-lg">
          <span class="text-sm text-gray-700">notion-integration</span>
          <label class="relative inline-block w-10 h-5 cursor-pointer">
            <input type="checkbox" class="sr-only peer" />
            <div class="w-10 h-5 bg-gray-300 rounded-full peer peer-checked:bg-gray-900 after:content-[''] after:absolute after:top-0.5 after:left-0.5 after:bg-white after:rounded-full after:h-4 after:w-4 after:transition-all peer-checked:after:translate-x-5"></div>
          </label>
        </div>

        <!-- Add Skills Button -->
        <button class="w-full py-2 px-3 text-sm text-white bg-black hover:bg-gray-800 rounded-lg font-medium transition-colors">
          + Add skills
        </button>
      </div>
    </div>

    <!-- Team Member Row -->
    <div class="flex items-center justify-between py-4 border-b border-gray-100 cursor-pointer hover:bg-gray-50">
      <div class="flex items-center gap-3">
        <div class="w-8 h-8 rounded-full bg-gray-200 flex items-center justify-center flex-shrink-0">
          <span class="text-xs font-medium text-gray-700">SM</span>
        </div>
        <div class="flex items-center gap-2">
          <div class="text-sm font-medium text-gray-900">Sarah Miller</div>
          <span class="px-2 py-0.5 text-xs font-medium bg-blue-100 text-blue-700 rounded-full">Sales</span>
        </div>
      </div>
      <svg class="w-4 h-4 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
      </svg>
    </div>

    <!-- Team Member Row -->
    <div class="flex items-center justify-between py-4 border-b border-gray-100 cursor-pointer hover:bg-gray-50">
      <div class="flex items-center gap-3">
        <div class="w-8 h-8 rounded-full bg-gray-200 flex items-center justify-center flex-shrink-0">
          <span class="text-xs font-medium text-gray-700">AK</span>
        </div>
        <div class="flex items-center gap-2">
          <div class="text-sm font-medium text-gray-900">Alex Kim</div>
          <span class="px-2 py-0.5 text-xs font-medium bg-green-100 text-green-700 rounded-full">Engineering</span>
        </div>
      </div>
      <svg class="w-4 h-4 text-gray-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
      </svg>
    </div>

    <!-- Show More -->
    <div class="flex items-center justify-center py-4">
      <button class="text-sm text-gray-500 hover:text-gray-700 flex items-center gap-1">
        Show more teammates
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
      </button>
    </div>
  </div>
</div>
