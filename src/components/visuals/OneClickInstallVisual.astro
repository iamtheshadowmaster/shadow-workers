---
import shadowIcon from '../../assets/128x128.png';
---

<style>
  @keyframes pulse-glow {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.6; }
  }

  .animate-pulse-glow { animation: pulse-glow 2s ease-in-out infinite; }
</style>

<div class="rounded-2xl bg-gradient-to-br from-gray-100 to-gray-200 p-6 sm:p-8 h-[600px] flex items-center justify-center border border-gray-100 relative overflow-hidden">
  <!-- Chrome Extension UI Mock -->
  <div class="w-full max-w-sm flex flex-col items-end gap-2">
    <!-- Chrome Extension Toolbar -->
    <div class="bg-white rounded-lg shadow-md px-2 py-1.5 flex items-center gap-1.5 border border-gray-300">
      <!-- Bitwarden Icon (blue shield) -->
      <div class="w-7 h-7 rounded flex items-center justify-center hover:bg-gray-100 transition-colors cursor-pointer">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
          <path d="M12 2L4 6v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V6l-8-4z" fill="#175DDC"/>
        </svg>
      </div>

      <!-- Loom Icon (purple camera) -->
      <div class="w-7 h-7 rounded flex items-center justify-center hover:bg-gray-100 transition-colors cursor-pointer">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
          <circle cx="12" cy="12" r="10" fill="#625DF5"/>
          <circle cx="12" cy="12" r="4" fill="white"/>
        </svg>
      </div>

      <!-- Attio Icon (green dots) -->
      <div class="w-7 h-7 rounded flex items-center justify-center hover:bg-gray-100 transition-colors cursor-pointer">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
          <circle cx="8" cy="12" r="3" fill="#10B981"/>
          <circle cx="16" cy="12" r="3" fill="#10B981"/>
        </svg>
      </div>

      <!-- Shadow Extension Icon (active/highlighted) -->
      <div class="w-7 h-7 rounded flex items-center justify-center bg-gray-50 hover:bg-gray-100 transition-colors cursor-pointer border border-gray-300">
        <img src={shadowIcon.src} alt="Shadow" class="w-5 h-5" />
      </div>
    </div>

    <!-- Extension Popup -->
    <div class="w-full shadow-2xl rounded-xl border border-gray-300">
    <!-- Extension Header -->
    <div class="bg-white rounded-t-xl px-4 py-3 flex items-center gap-3 border-b border-gray-200">
      <img src={shadowIcon.src} alt="Shadow" class="w-8 h-8 border border-gray-200 rounded-lg" />
      <div>
        <div class="text-sm font-semibold text-gray-900">Shadow Extension</div>
      </div>
    </div>

    <!-- Extension Body -->
    <div class="bg-white px-4 py-4 space-y-2.5">
      <!-- Header -->
      <div class="flex items-center gap-2 mb-2">
        <h3 class="text-sm font-semibold text-gray-900">Your skills</h3>
      </div>

      <!-- Skills List - First 3 from DiscoverSkillsVisual -->

      <!-- Skill 1 - Toggle On -->
      <div class="flex items-center gap-3 p-3 rounded-lg bg-gray-50 border border-gray-200 hover:border-gray-300 transition-colors">
        <div class="flex-1">
          <div class="text-sm font-medium text-gray-900 mb-0.5">Track product features</div>
          <div class="text-xs text-gray-500">Keep track of your development pipeline</div>
        </div>
        <!-- Toggle Switch ON -->
        <label class="relative inline-flex items-center cursor-pointer flex-shrink-0">
          <input type="checkbox" class="sr-only peer" checked>
          <div class="w-9 h-5 bg-gray-200 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-4 after:w-4 after:transition-all peer-checked:bg-gray-900"></div>
        </label>
      </div>

      <!-- Skill 2 - Toggle On -->
      <div class="flex items-center gap-3 p-3 rounded-lg bg-gray-50 border border-gray-200 hover:border-gray-300 transition-colors">
        <div class="flex-1">
          <div class="text-sm font-medium text-gray-900 mb-0.5">Fetch all invoices</div>
          <div class="text-xs text-gray-500">Retrieve billing data from your system</div>
        </div>
        <!-- Toggle Switch ON -->
        <label class="relative inline-flex items-center cursor-pointer flex-shrink-0">
          <input type="checkbox" class="sr-only peer" checked>
          <div class="w-9 h-5 bg-gray-200 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-4 after:w-4 after:transition-all peer-checked:bg-gray-900"></div>
        </label>
      </div>

      <!-- Skill 3 - Toggle Off with pulse -->
      <div class="flex items-center gap-3 p-3 rounded-lg bg-gray-50 border border-gray-200 hover:border-gray-300 transition-colors">
        <div class="flex-1">
          <div class="text-sm font-medium text-gray-900 mb-0.5">Write next 4 blog articles</div>
          <div class="text-xs text-gray-500">Automate content creation for your audience</div>
        </div>
        <!-- Toggle Switch OFF with animation -->
        <label class="relative inline-flex items-center cursor-pointer flex-shrink-0 animate-pulse-glow">
          <input type="checkbox" class="sr-only peer">
          <div class="w-9 h-5 bg-gray-200 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-4 after:w-4 after:transition-all peer-checked:bg-gray-900"></div>
        </label>
      </div>
    </div>

    <!-- Bottom Navigation -->
    <div class="bg-white rounded-b-xl px-4 py-3 flex items-center justify-around border-t border-gray-200">
      <div class="flex flex-col items-center gap-1">
        <!-- Lucide Wand Icon -->
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-gray-900">
          <path d="M15 4V2"/>
          <path d="M15 16v-2"/>
          <path d="M8 9h2"/>
          <path d="M20 9h2"/>
          <path d="M17.8 11.8 19 13"/>
          <path d="M15 9h0"/>
          <path d="M17.8 6.2 19 5"/>
          <path d="m3 21 9-9"/>
          <path d="M12.2 6.2 11 5"/>
        </svg>
        <div class="text-[10px] font-medium text-gray-900">Skills</div>
      </div>
      <div class="flex flex-col items-center gap-1">
        <!-- Lucide Plug Icon -->
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-gray-400">
          <path d="M12 22v-5"/>
          <path d="M9 8V2"/>
          <path d="M15 8V2"/>
          <path d="M18 8v5a4 4 0 0 1-4 4h-4a4 4 0 0 1-4-4V8Z"/>
        </svg>
        <div class="text-[10px] font-medium text-gray-400">MCP</div>
      </div>
    </div>
    </div>
  </div>
</div>
