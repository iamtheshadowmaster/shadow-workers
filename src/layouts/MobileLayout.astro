---
import '../styles/global.css';
import favicon from '../assets/favicon.svg';
---
<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
		<link rel="icon" type="image/svg+xml" href={favicon.src} />
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Nunito:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="https://rsms.me/inter/inter.css">
		<meta name="generator" content={Astro.generator} />
		<title>Shadow Mobile</title>
		<meta name="description" content="Shadow - The new AI task management tool that works for you, automating tasks so you can focus on what matters." />
		<style>
			.magic-button {
				background: transparent;
				position: relative;
				border: none;
				z-index: 1;
			}
			.magic-button::before {
				content: '';
				position: absolute;
				inset: 0;
				padding: 2px;
				background: linear-gradient(45deg, #3B82F6, #F43F5E, #FFFFFF);
				-webkit-mask: 
					linear-gradient(#fff 0 0) content-box, 
					linear-gradient(#fff 0 0);
				mask: 
					linear-gradient(#fff 0 0) content-box, 
					linear-gradient(#fff 0 0);
				-webkit-mask-composite: xor;
				mask-composite: exclude;
				pointer-events: none;
			}
			.magic-button:hover {
				background: linear-gradient(45deg, #3B82F620, #F43F5E20, #FFFFFF20);
			}
			
			/* Mobile-specific styles */
			.mobile-container {
				padding: 16px;
				max-width: 100%;
				overflow-x: hidden;
			}
			
			.mobile-nav {
				position: fixed;
				bottom: 0;
				left: 0;
				right: 0;
				background: #111827;
				display: flex;
				justify-content: space-around;
				padding: 12px 0;
				border-top: 1px solid #374151;
				z-index: 50;
			}
			
			.nav-item {
				display: flex;
				flex-direction: column;
				align-items: center;
				color: #9CA3AF;
				font-size: 12px;
			}
			
			.nav-item.active {
				color: #3B82F6;
			}
			
			.nav-icon {
				font-size: 24px;
				margin-bottom: 4px;
			}
		</style>
	</head>
	<body class="bg-black text-gray-100 min-h-screen pb-16">
		<div class="mobile-container">
			<slot />
		</div>
		
		<nav class="mobile-nav">
			<a href="/mobile" class="nav-item" id="home-nav">
				<div class="nav-icon">ðŸ“‹</div>
				<span>Leaderboard</span>
			</a>
			<a href="/mobile/add-task" class="nav-item" id="add-task-nav">
				<div class="nav-icon">âž•</div>
				<span>Add Task</span>
			</a>
		</nav>
		
		<script>
			// Set active nav item based on current path
			const path = window.location.pathname;
			if (path.endsWith('add-task') || path.includes('add-task')) {
				document.getElementById('add-task-nav')?.classList.add('active');
			} else {
				document.getElementById('home-nav')?.classList.add('active');
			}
		</script>
		
		<!-- Import Capacitor initialization script -->
		<script src="/lib/capacitor-init.js"></script>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: 'Inter var', 'Inter', 'Nunito', system-ui, sans-serif;
		overflow-x: hidden;
	}
</style>