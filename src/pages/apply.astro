---
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Apply - Shadow">
  <Nav />
  <main class="min-h-screen bg-black pt-24">
    <div class="mx-auto max-w-7xl px-6 lg:px-8 py-12">
      <div class="mx-auto max-w-2xl">
        <div class="text-center mb-16">
          <h1 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">
            Join our founding waitlist
          </h1>
          <p class="mt-6 text-lg leading-8 text-gray-300">
            Be part of shaping the future of productivity. As one of our first users, you'll get exclusive early access to Shadow, share your insights, and help us build the ultimate AI-powered task management app that gets things done. Your feedback will directly influence our features and design.
          </p>
        </div>

        <form id="applicationForm" class="space-y-8">
          <div class="grid grid-cols-1 gap-x-8 gap-y-6 sm:grid-cols-2">
            <div>
              <label for="first-name" class="block text-sm font-medium leading-6 text-white">
                First name
              </label>
              <div class="mt-2">
                <input
                  type="text"
                  name="firstName"
                  id="first-name"
                  required
                  placeholder="First name"
                  class="block w-full rounded-md border-0 bg-white/5 px-3.5 py-2 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-cyan-500 sm:text-sm sm:leading-6"
                />
              </div>
            </div>

            <div>
              <label for="last-name" class="block text-sm font-medium leading-6 text-white">
                Last name
              </label>
              <div class="mt-2">
                <input
                  type="text"
                  name="lastName"
                  id="last-name"
                  required
                  placeholder="Last name"
                  class="block w-full rounded-md border-0 bg-white/5 px-3.5 py-2 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-cyan-500 sm:text-sm sm:leading-6"
                />
              </div>
            </div>

            <div class="sm:col-span-2">
              <label for="job" class="block text-sm font-medium leading-6 text-white">
                What's your job?
              </label>
              <div class="mt-2">
                <input
                  type="text"
                  name="job"
                  id="job"
                  required
                  placeholder="Drop a few keywords"
                  class="block w-full rounded-md border-0 bg-white/5 px-3.5 py-2 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-cyan-500 sm:text-sm sm:leading-6"
                />
              </div>
            </div>

            <div class="space-y-4 sm:col-span-2">
              <div>
                <div class="flex items-center gap-2 mb-1">
                  <label for="tools" class="block text-sm font-medium leading-6 text-white">
                    What tools do you use to work?
                  </label>
                  <button
                    type="button"
                    id="suggestTools"
                    class="magic-button"
                  >
                    <span>
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 00-2.456 2.456zM16.894 20.567L16.5 21.75l-.394-1.183a2.25 2.25 0 00-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 001.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 001.423 1.423l1.183.394-1.183.394a2.25 2.25 0 00-1.423 1.423z" />
                      </svg>
                    </span>
                  </button>
                  <div id="toolsSuggestion" class="mt-1 text-sm text-gray-400 hidden"></div>

                </div>
                <input
                  type="text"
                  name="tools"
                  id="tools"
                  required
                  placeholder="List the tools you use daily"
                  class="block w-full rounded-md border-0 bg-white/5 px-3.5 py-2 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-cyan-500 sm:text-sm sm:leading-6"
                />
              </div>
            </div>

            <div class="space-y-4 sm:col-span-2">
              <div>
                <div class="flex items-center gap-2 mb-1">
                  <label for="why" class="block text-sm font-medium leading-6 text-white">
                    Why do you want to join our CAB?
                  </label>
                  <button
                    type="button"
                    id="suggestMotivation"
                    class="magic-button"
                  >
                    <span>
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 00-2.456 2.456zM16.894 20.567L16.5 21.75l-.394-1.183a2.25 2.25 0 00-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 001.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 001.423 1.423l1.183.394-1.183.394a2.25 2.25 0 00-1.423 1.423z" />
                      </svg>
                    </span>
                  </button>
                  <div id="motivationSuggestion" class="mt-1 text-sm text-gray-400 hidden"></div>
                </div>
                <textarea
                  id="why"
                  name="why"
                  rows="4"
                  required
                  placeholder="Tell us why you want to join our Customer Advisory Board"
                  class="block w-full rounded-md border-0 bg-white/5 px-3.5 py-2 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-cyan-500 sm:text-sm sm:leading-6"
                ></textarea>
              </div>
            </div>

            <div class="sm:col-span-2">
              <label for="email" class="block text-sm font-medium leading-6 text-white">
                Oh, and your email please
              </label>
              <div class="mt-2">
                <input
                  type="email"
                  name="email"
                  id="email"
                  required
                  placeholder="firstname.lastname@company.com"
                  class="block w-full rounded-md border-0 bg-white/5 px-3.5 py-2 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-cyan-500 sm:text-sm sm:leading-6"
                />
              </div>
            </div>
          </div>

          <div class="mt-10">
            <button
              type="submit"
              class="rounded-full bg-shadow-blue px-3.5 py-2 text-md font-semibold text-white shadow-sm hover:bg-opacity-90 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-shadow-blue"
            >
              Submit
            </button>
          </div>
          <div id="formMessage" class="mt-4 text-center text-sm"></div>
        </form>
      </div>
    </div>
  </main>
  <Footer />
</Layout>

<style>
  .magic-button {
    background: transparent;
    position: relative;
    padding: 1.5px;
    border-radius: 4px;
    background: linear-gradient(45deg, #3B82F6, #F43F5E, #FFFFFF);
  }
  .magic-button span {
    display: flex;
    align-items: center;
    justify-content: center;
    background: black;
    border-radius: 3.5px;
    padding: 4px;
    height: 100%;
    width: 100%;
  }
  .magic-button:hover span {
    background: linear-gradient(45deg, #3B82F610, #F43F5E10, #FFFFFF10);
  }
</style>

<script>
  const form = document.getElementById('applicationForm') as HTMLFormElement;
  const messageDiv = document.getElementById('formMessage');
  const toolsSuggestionDiv = document.getElementById('toolsSuggestion');
  const motivationSuggestionDiv = document.getElementById('motivationSuggestion');
  const jobInput = document.getElementById('job') as HTMLInputElement;
  const toolsInput = document.getElementById('tools') as HTMLInputElement;
  const whyInput = document.getElementById('why') as HTMLTextAreaElement;

  document.getElementById('suggestTools')?.addEventListener('click', async () => {
    if (!jobInput.value) {
      toolsSuggestionDiv!.textContent = 'Please fill in your job first';
      toolsSuggestionDiv!.classList.remove('hidden');
      return;
    }

    toolsSuggestionDiv!.textContent = 'Thinking...';
    toolsSuggestionDiv!.classList.remove('hidden');

    try {
      const response = await fetch('/api/suggest-tools', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ job: jobInput.value }),
      });

      if (!response.ok) throw new Error('Failed to get suggestions');

      const data = await response.json();
      toolsInput.value = data.tools;
      toolsSuggestionDiv!.classList.add('hidden');
    } catch (error) {
      toolsSuggestionDiv!.textContent = 'Failed to get suggestions. Please try again.';
    }
  });

  document.getElementById('suggestMotivation')?.addEventListener('click', async () => {
    if (!jobInput.value || !toolsInput.value) {
      motivationSuggestionDiv!.textContent = 'Please fill in your job and tools first';
      motivationSuggestionDiv!.classList.remove('hidden');
      return;
    }

    motivationSuggestionDiv!.textContent = 'Thinking...';
    motivationSuggestionDiv!.classList.remove('hidden');

    try {
      const response = await fetch('/api/suggest-motivation', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ 
          job: jobInput.value,
          tools: toolsInput.value 
        }),
      });

      if (!response.ok) throw new Error('Failed to get suggestions');

      const data = await response.json();
      whyInput.value = data.motivation;
      motivationSuggestionDiv!.classList.add('hidden');
    } catch (error) {
      motivationSuggestionDiv!.textContent = 'Failed to get suggestions. Please try again.';
    }
  });

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    if (!messageDiv) return;
    
    messageDiv.textContent = 'Submitting...';
    messageDiv.className = 'mt-4 text-center text-sm text-gray-300';

    const formData = new FormData(form);
    
    // Create a clean data object with only the fields we need
    const data = {
      firstName: formData.get('firstName')?.toString().trim() || '',
      lastName: formData.get('lastName')?.toString().trim() || '',
      job: formData.get('job')?.toString().trim() || '',
      tools: formData.get('tools')?.toString().trim() || '',
      why: formData.get('why')?.toString().trim() || '',
      email: formData.get('email')?.toString().trim() || ''
    } as const; // Make the object type readonly

    // Validate required fields
    for (const [key, value] of Object.entries(data)) {
      if (!value) {
        messageDiv.textContent = `Please fill in the ${key} field`;
        messageDiv.className = 'mt-4 text-center text-sm text-red-500';
        return;
      }
    }

    try {
      // Stringify the data with only the fields we need
      const jsonData = JSON.stringify({
        firstName: data.firstName,
        lastName: data.lastName,
        job: data.job,
        tools: data.tools,
        why: data.why,
        email: data.email
      });

      console.log('Sending JSON:', jsonData);

      const response = await fetch('/api/apply', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: jsonData
      });

      console.log('Response status:', response.status);
      const responseData = await response.json();
      console.log('Response data:', responseData);

      if (response.ok) {
        messageDiv.textContent = 'Thank you for applying! We will get back to you soon.';
        messageDiv.className = 'mt-4 text-center text-sm text-shadow-blue';
        form.reset();
      } else {
        throw new Error(responseData.error || responseData.message || 'Failed to submit application');
      }
    } catch (error) {
      console.error('Submission error:', error);
      messageDiv.textContent = error instanceof Error ? error.message : 'Something went wrong. Please try again.';
      messageDiv.className = 'mt-4 text-center text-sm text-red-500';
    }
  });
</script>
