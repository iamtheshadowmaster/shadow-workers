---
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
import Hero from '../components/Hero.astro';
import FeatureSection from '../components/FeatureSection.astro';
import Value from '../components/Value.astro';
import CallToAction from '../components/CallToAction.astro';
import Footer from '../components/Footer.astro';

---

<Layout>
  <Nav />
  
  <!-- Unified Background Container -->
  <div class="bg-gradient-to-br from-gray-900 via-black to-gray-900">
    <Hero />
    
    <!-- Feature Sections -->
    <FeatureSection 
      title="Every chat becomes a task"
      subtitle="Shadow turns conversations into trackable work by creating tasks with full context and actionnable items"
      video="/videos/feat1-sub1.mp4"
      backgroundColor=""
    />
    
    <FeatureSection 
      title="Conversations become knowledge"
      subtitle="AI sorts every message into Notes, Announcements, and Updates"
      video="/videos/feat2.mp4"
      backgroundColor=""
    />
    
    <Value 
      title="Stop losing track of everything"
      subtitle="Never miss a deadline, forget a decision, or wonder 'what was that thing we talked about?' ever again"
      backgroundColor=""
    />
    
    <CallToAction />
    <Footer />
  </div>
</Layout>