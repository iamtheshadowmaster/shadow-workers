---
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
import Hero from '../components/Hero.astro';
import Stakes from '../components/Stakes.astro';
import Plan from '../components/Plan.astro';
import SocialProof from '../components/SocialProof.astro';
import ProductFeatures from '../components/ProductFeatures.astro';
import AIFeatures from '../components/AIFeatures.astro';
import PlanningSection from '../components/PlanningSection.astro';
import FeatureSection from '../components/FeatureSection.astro';
import WorkflowSection from '../components/WorkflowSection.astro';
import FinalCTA from '../components/FinalCTA.astro';
import Footer from '../components/Footer.astro';

---

<Layout>
  <Nav />

  <!-- Linear-Inspired Design System -->
  <div class="bg-black">

    <!-- 1. HERO: Purpose-built messaging -->
    <Hero />

    <!-- 2. STAKES: What happens if nothing changes -->
    <Stakes />

    <!-- 3. THE PLAN: Solo Mode - How it works -->
    <Plan />

    <!-- 4. SOCIAL PROOF: Trust & positioning -->
    <SocialProof />

    <!-- 3. PRODUCT FEATURES: Three-card grid -->
    <ProductFeatures />

    <!-- 4. AI FEATURES: Showcase intelligence -->
    <AIFeatures />

    <!-- 5. PLANNING & GOALS: Visual demo -->
    <PlanningSection />

    <!-- 6. FEATURE DEMONSTRATIONS: Video showcases -->
    <section class="bg-black">
      <div class="max-w-7xl mx-auto px-6 py-32">
        <div class="text-center mb-20">
          <div class="inline-flex items-center gap-2 mb-6">
            <div class="w-2 h-2 rounded-full bg-yellow-500"></div>
            <span class="text-sm font-medium text-gray-400 uppercase tracking-wider">In action</span>
          </div>
          <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
            Built for speed and clarity
          </h2>
          <p class="text-xl text-gray-400 max-w-2xl mx-auto">
            See how Shadow transforms daily work into measurable progress
          </p>
        </div>
      </div>
    </section>

    <FeatureSection
      title="Every conversation becomes progress"
      subtitle="Shadow automatically creates tasks from your chats, aligned with your goals and ready to execute"
      video="/videos/feat1-sub1.mp4"
      backgroundColor=""
    />

    <FeatureSection
      title="Intelligence that understands context"
      subtitle="AI automatically organizes information into Notes, Announcements, and Updates so nothing gets lost"
      video="/videos/feat2.mp4"
      backgroundColor=""
    />

    <!-- 7. WORKFLOWS & COLLABORATION -->
    <WorkflowSection />

    <!-- 8. FINAL CTA -->
    <FinalCTA />

    <Footer />
  </div>
</Layout>