<style>
  /* Stakes highlighting styles */
  #pioneer-stakes-content .highlight-word {
    color: rgba(255, 255, 255, 0.4);
    transition: color 0.6s cubic-bezier(0.4, 0, 0.2, 1), text-shadow 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    display: inline;
    will-change: color, text-shadow;
  }

  #pioneer-stakes-content .highlight-word.active {
    color: rgba(255, 255, 255, 1);
    text-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
  }
</style>

<script is:inline>
  (function() {
    // Scroll-based word highlighting for the problem section
    let highlightWords;
    let stakesSection;
    let ticking = false;

    function initHighlights() {
      highlightWords = document.querySelectorAll('#pioneer-stakes-content .highlight-word');
      stakesSection = document.getElementById('pioneer-stakes-section');
      console.log('Pioneer: Found', highlightWords.length, 'highlight words');
      console.log('Pioneer: Stakes section', stakesSection);

      if (highlightWords.length === 0) {
        console.log('Pioneer: No highlight words found, retrying...');
        // Retry after a short delay to ensure Astro has rendered the content
        setTimeout(initHighlights, 100);
        return;
      }

      updateHighlights();
    }

    function updateHighlights() {
      if (!stakesSection || !highlightWords || highlightWords.length === 0) {
        console.log('Pioneer: Missing elements', {stakesSection, highlightWords: highlightWords?.length});
        return;
      }

      const rect = stakesSection.getBoundingClientRect();
      const sectionHeight = stakesSection.offsetHeight;
      const viewportHeight = window.innerHeight;

      // Calculate scroll progress through the section (0 to 1)
      const scrollProgress = Math.max(0, Math.min(1, -rect.top / (sectionHeight - viewportHeight)));

      console.log('Pioneer: Scroll progress:', scrollProgress);

      // Determine which words should be highlighted based on scroll progress
      const totalWords = highlightWords.length;

      highlightWords.forEach((word, index) => {
        const wordThreshold = index / totalWords;
        const nextThreshold = (index + 1) / totalWords;

        if (scrollProgress >= wordThreshold) {
          const wordProgress = Math.min(1, (scrollProgress - wordThreshold) / (nextThreshold - wordThreshold));
          const easedProgress = 1 - Math.pow(1 - wordProgress, 3);
          const opacity = 0.4 + (0.6 * easedProgress);

          word.style.color = `rgba(255, 255, 255, ${opacity})`;
          word.classList.add('active');
          console.log('Pioneer: Activating word', index, 'opacity:', opacity);
        } else {
          word.style.color = 'rgba(255, 255, 255, 0.4)';
          word.classList.remove('active');
        }
      });

      ticking = false;
    }

    function requestUpdate() {
      if (!ticking) {
        requestAnimationFrame(updateHighlights);
        ticking = true;
      }
    }

    // Initialize on load with a delay to ensure content is rendered
    function init() {
      setTimeout(initHighlights, 50);
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', init);
    } else {
      init();
    }

    // Update on scroll
    window.addEventListener('scroll', requestUpdate, { passive: true });
  })();
</script>
