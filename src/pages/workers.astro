---
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import { workers, categories } from '../data/workers-skills';
---

<Layout>
  <Nav />

  <div class="bg-black min-h-screen">
    <!-- Hero Section -->
    <section class="pt-48 pb-16">
      <div class="workers-container">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6">
          AI Workers
        </h1>
        <p class="text-lg md:text-xl text-white/60 mb-16 max-w-2xl">
          The full catalog of AI Workers you can hire through Shadow. Each role follows the AI Employee Framework.
        </p>

        <!-- Search and Filters -->
        <div class="flex flex-wrap gap-3 items-center">
          <!-- Search Bar -->
          <div class="relative w-full md:w-80">
            <svg width="18" height="18" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" class="absolute left-5 top-1/2 -translate-y-1/2 text-white/40 pointer-events-none">
              <circle cx="11" cy="11" r="8"></circle>
              <path d="m21 21-4.35-4.35"></path>
            </svg>
            <input
              type="text"
              id="searchInput"
              placeholder="Search workers..."
              class="w-full h-12 pl-14 pr-5 bg-white/5 border border-white/10 rounded-full text-sm text-white placeholder-white/40 outline-none focus:border-white/25 transition-colors appearance-none"
              style="box-shadow: none !important;"
            />
          </div>

          <!-- Category Filters -->
          {categories.map((category) => (
            <button
              class="category-filter h-12 px-5 rounded-full text-sm font-medium transition-colors"
              data-category={category}
              class:list={[
                category === "All"
                  ? "bg-white text-black"
                  : "bg-white/5 text-white/60 hover:bg-white/10 hover:text-white/80"
              ]}
            >
              {category}
            </button>
          ))}
        </div>
      </div>
    </section>

    <!-- Workers Grid -->
    <section class="pb-32">
      <div class="workers-container">
        <div id="workersGrid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {workers.map((worker) => (
            <div
              class="worker-card group bg-white/5 backdrop-blur-sm rounded-xl p-6 border border-white/10 hover:border-white/20 transition-all cursor-pointer"
              data-worker-id={worker.id}
              data-category={worker.category}
              data-name={worker.name.toLowerCase()}
              data-description={worker.description.toLowerCase()}
            >
              <!-- Category badge -->
              <div class="flex items-center justify-between mb-4">
                <span class="px-3 py-1 rounded-full text-xs font-medium bg-white/10 text-white/50">
                  {worker.category}
                </span>
              </div>

              <!-- Title -->
              <h3 class="text-lg font-semibold text-white group-hover:text-white/90 transition-colors mb-2">
                {worker.name}
              </h3>

              <!-- Description -->
              <p class="text-sm text-white/50 leading-relaxed mb-5">
                {worker.description}
              </p>

              <!-- Role (first 3 items) -->
              <div class="mb-5">
                <ul class="space-y-1.5">
                  {worker.role.slice(0, 3).map((item) => (
                    <li class="flex gap-2 text-xs text-white/40">
                      <span class="text-white/20 mt-0.5 flex-shrink-0">-</span>
                      <span>{item}</span>
                    </li>
                  ))}
                  {worker.role.length > 3 && (
                    <li class="text-xs text-white/30 pl-4">+{worker.role.length - 3} more</li>
                  )}
                </ul>
              </div>

              <!-- Tools -->
              <div class="flex flex-wrap gap-1.5 pt-4 border-t border-white/5">
                {worker.tools.slice(0, 4).map((tool) => (
                  <span class="px-2 py-0.5 rounded-md bg-white/5 text-white/40 text-xs">
                    {tool}
                  </span>
                ))}
                {worker.tools.length > 4 && (
                  <span class="px-2 py-0.5 rounded-md bg-white/5 text-white/30 text-xs">
                    +{worker.tools.length - 4}
                  </span>
                )}
              </div>
            </div>
          ))}
        </div>

        <!-- No Results Message -->
        <div id="noResults" class="hidden text-center py-20">
          <h3 class="text-xl font-bold text-white mb-2">No workers found</h3>
          <p class="text-white/60">Try adjusting your search or filters</p>
        </div>
      </div>
    </section>
  </div>

  <!-- Modal for Worker Details -->
  <div id="workerModal" class="fixed inset-0 z-50 hidden items-center justify-center p-4 md:p-6 bg-black/80 backdrop-blur-sm">
    <div class="modal-shell relative max-w-2xl w-full bg-[#090909] rounded-2xl border border-white/10 shadow-2xl max-h-[90vh] overflow-y-auto">
      <!-- Sticky close button -->
      <div class="sticky top-0 z-10 flex justify-end p-4 pb-0">
        <button
          id="closeModal"
          class="w-8 h-8 rounded-full bg-white/10 hover:bg-white/20 transition-all flex items-center justify-center text-white/60 hover:text-white"
        >
          <svg width="14" height="14" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <div id="modalContent" class="px-8 pb-8 md:px-10 md:pb-10">
        <!-- Content will be dynamically inserted here -->
      </div>
    </div>
  </div>

  <Footer />

  <style>
    .workers-container {
      max-width: 1000px;
      margin: 0 auto;
      padding-left: 1.5rem;
      padding-right: 1.5rem;
    }

    @media (max-width: 768px) {
      .workers-container {
        padding-left: 1.25rem;
        padding-right: 1.25rem;
      }
    }

    @media (max-width: 640px) {
      .workers-container {
        padding-left: 1rem;
        padding-right: 1rem;
      }
    }

    /* Modal shell */
    .modal-shell {
      scrollbar-width: thin;
      scrollbar-color: rgba(255,255,255,0.08) transparent;
    }
    .modal-shell::-webkit-scrollbar { width: 6px; }
    .modal-shell::-webkit-scrollbar-track { background: transparent; }
    .modal-shell::-webkit-scrollbar-thumb { background: rgba(255,255,255,0.08); border-radius: 3px; }

    /* Section blocks */
    .modal-block {
      background: rgba(255, 255, 255, 0.03);
      border: 1px solid rgba(255, 255, 255, 0.06);
      border-radius: 12px;
      padding: 1.25rem 1.5rem;
      margin-bottom: 0.75rem;
    }

    .modal-section-title {
      font-size: 0.65rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.12em;
      color: rgba(255, 255, 255, 0.3);
      margin-bottom: 0.875rem;
    }

    .modal-group-title {
      font-size: 0.8rem;
      font-weight: 600;
      color: rgba(255, 255, 255, 0.85);
      margin-bottom: 1rem;
      padding-bottom: 0.625rem;
      border-bottom: 1px solid rgba(255, 255, 255, 0.06);
    }

    /* Autonomy tags */
    .autonomy-tag {
      display: inline-flex;
      align-items: center;
      padding: 0.2rem 0.625rem;
      border-radius: 9999px;
      font-size: 0.675rem;
      font-weight: 500;
      letter-spacing: 0.02em;
    }

    .autonomy-auto {
      background: rgba(34, 197, 94, 0.1);
      color: rgba(34, 197, 94, 0.75);
      border: 1px solid rgba(34, 197, 94, 0.12);
    }

    .autonomy-assist {
      background: rgba(59, 130, 246, 0.1);
      color: rgba(59, 130, 246, 0.75);
      border: 1px solid rgba(59, 130, 246, 0.12);
    }

    .autonomy-draft {
      background: rgba(234, 179, 8, 0.1);
      color: rgba(234, 179, 8, 0.75);
      border: 1px solid rgba(234, 179, 8, 0.12);
    }

    /* KPI pills */
    .kpi-pill {
      display: inline-block;
      padding: 0.3rem 0.75rem;
      border-radius: 8px;
      font-size: 0.75rem;
      color: rgba(255, 255, 255, 0.55);
      background: rgba(255, 255, 255, 0.04);
      border: 1px solid rgba(255, 255, 255, 0.06);
    }

    /* Tool access row */
    .tool-row {
      display: flex;
      align-items: baseline;
      justify-content: space-between;
      gap: 1rem;
      padding: 0.5rem 0;
      border-bottom: 1px solid rgba(255, 255, 255, 0.04);
    }
    .tool-row:last-child { border-bottom: none; }

    /* Does-not pills */
    .does-not-pill {
      display: inline-block;
      padding: 0.25rem 0.625rem;
      border-radius: 6px;
      font-size: 0.725rem;
      color: rgba(255, 255, 255, 0.4);
      background: rgba(255, 80, 80, 0.06);
      border: 1px solid rgba(255, 80, 80, 0.08);
    }
  </style>

  <script define:vars={{ workers }}>
    let currentCategory = "All";
    let searchQuery = "";

    const searchInput = document.getElementById('searchInput');
    const categoryButtons = document.querySelectorAll('.category-filter');
    const workerCards = document.querySelectorAll('.worker-card');
    const workersGrid = document.getElementById('workersGrid');
    const noResults = document.getElementById('noResults');
    const modal = document.getElementById('workerModal');
    const modalContent = document.getElementById('modalContent');
    const closeModalBtn = document.getElementById('closeModal');

    function filterAndSort() {
      let visibleCards = 0;
      const cardsArray = Array.from(workerCards);

      cardsArray.forEach(card => {
        const category = card.dataset.category;
        const name = card.dataset.name;
        const description = card.dataset.description;

        const matchesCategory = currentCategory === "All" || category === currentCategory;
        const matchesSearch = searchQuery === "" ||
          name.includes(searchQuery.toLowerCase()) ||
          description.includes(searchQuery.toLowerCase());

        if (matchesCategory && matchesSearch) {
          card.style.display = 'block';
          visibleCards++;
        } else {
          card.style.display = 'none';
        }
      });

      if (visibleCards === 0) {
        noResults.classList.remove('hidden');
      } else {
        noResults.classList.add('hidden');
      }
    }

    searchInput.addEventListener('input', (e) => {
      searchQuery = e.target.value;
      filterAndSort();
    });

    categoryButtons.forEach(button => {
      button.addEventListener('click', () => {
        currentCategory = button.dataset.category;

        categoryButtons.forEach(btn => {
          if (btn.dataset.category === currentCategory) {
            btn.classList.remove('bg-white/5', 'text-white/60', 'hover:bg-white/10', 'hover:text-white/80');
            btn.classList.add('bg-white', 'text-black');
          } else {
            btn.classList.remove('bg-white', 'text-black');
            btn.classList.add('bg-white/5', 'text-white/60', 'hover:bg-white/10', 'hover:text-white/80');
          }
        });

        filterAndSort();
      });
    });

    function getAutonomyClass(mode) {
      switch (mode.toLowerCase()) {
        case 'auto': return 'autonomy-auto';
        case 'assist': return 'autonomy-assist';
        case 'draft': return 'autonomy-draft';
        default: return 'autonomy-assist';
      }
    }

    function openModal(workerId) {
      const worker = workers.find(w => w.id === workerId);
      if (!worker) return;

      const kpiItems = worker.kpis.split(' · ');
      const doesNotItems = worker.doesNot.split(' · ');

      modalContent.innerHTML = `
        <div>
          <!-- Header -->
          <div class="mb-8">
            <span class="inline-block px-3 py-1 rounded-full text-xs font-medium bg-white/8 text-white/45 mb-4 border border-white/6">
              ${worker.category}
            </span>
            <h2 class="text-2xl md:text-3xl font-bold text-white mb-3 leading-tight">${worker.name}</h2>
            <p class="text-white/45 text-[0.95rem] leading-relaxed">${worker.description}</p>
          </div>

          <!-- Role & Mandate -->
          <div class="modal-block">
            <h3 class="modal-section-title">Role & Mandate</h3>
            <ul class="space-y-2.5">
              ${worker.role.map(item => `
                <li class="flex gap-3 text-[0.8125rem] leading-relaxed text-white/65">
                  <span class="text-white/20 flex-shrink-0 translate-y-[1px]">&#8250;</span>
                  <span>${item}</span>
                </li>
              `).join('')}
            </ul>
          </div>

          <!-- KPIs -->
          <div class="modal-block">
            <h3 class="modal-section-title">KPIs</h3>
            <div class="flex flex-wrap gap-2">
              ${kpiItems.map(kpi => `<span class="kpi-pill">${kpi.trim()}</span>`).join('')}
            </div>
          </div>

          <!-- Does NOT -->
          <div class="modal-block">
            <h3 class="modal-section-title">Does NOT</h3>
            <div class="flex flex-wrap gap-2">
              ${doesNotItems.map(item => `<span class="does-not-pill">${item.trim()}</span>`).join('')}
            </div>
          </div>

          <div style="height: 1.25rem;"></div>

          <!-- Tool Access -->
          <div class="modal-block">
            <h3 class="modal-section-title">Tool Access</h3>
            <div>
              ${worker.toolAccess.map(t => `
                <div class="tool-row">
                  <span class="text-[0.8125rem] text-white/60">${t.tool}</span>
                  <span class="text-[0.6875rem] text-white/30 flex-shrink-0 font-mono">${t.access}</span>
                </div>
              `).join('')}
            </div>
          </div>

          <!-- Skills -->
          <div class="modal-block">
            <h3 class="modal-section-title">Skills</h3>
            <div class="space-y-3">
              ${worker.skills.map(s => `
                <div class="flex flex-col sm:flex-row sm:items-baseline sm:gap-2">
                  <span class="text-[0.8125rem] font-medium text-white/70 flex-shrink-0">${s.name}</span>
                  <span class="text-[0.8125rem] text-white/35 leading-relaxed">${s.detail}</span>
                </div>
              `).join('')}
            </div>
          </div>

          <div style="height: 1.25rem;"></div>

          <!-- Communication & Feedback -->
          <div class="modal-block">
            <h3 class="modal-section-title">Communication</h3>
            <ul class="space-y-2 mb-5">
              ${worker.communication.map(item => `
                <li class="flex gap-3 text-[0.8125rem] text-white/55 leading-relaxed">
                  <span class="text-white/15 flex-shrink-0 translate-y-[1px]">&#8250;</span>
                  <span>${item}</span>
                </li>
              `).join('')}
            </ul>

            <h3 class="modal-section-title">Feedback & Learning</h3>
            <ul class="space-y-2">
              ${worker.feedback.map(item => `
                <li class="flex gap-3 text-[0.8125rem] text-white/55 leading-relaxed">
                  <span class="text-white/15 flex-shrink-0 translate-y-[1px]">&#8250;</span>
                  <span>${item}</span>
                </li>
              `).join('')}
            </ul>
          </div>

          <!-- Autonomy -->
          <div class="modal-block">
            <h3 class="modal-section-title">Autonomy Levels</h3>
            <div class="space-y-2.5">
              ${worker.autonomy.map(a => `
                <div class="flex items-center justify-between">
                  <span class="text-[0.8125rem] text-white/55">${a.task}</span>
                  <span class="autonomy-tag ${getAutonomyClass(a.mode)}">${a.mode}</span>
                </div>
              `).join('')}
            </div>
          </div>

          <!-- Escalation -->
          <div class="modal-block" style="background: rgba(255, 160, 60, 0.03); border-color: rgba(255, 160, 60, 0.08);">
            <h3 class="modal-section-title" style="color: rgba(255, 160, 60, 0.45);">Escalation</h3>
            <p class="text-[0.8125rem] text-white/50 leading-relaxed">${worker.escalation}</p>
          </div>

          <!-- CTA -->
          <a href="https://app.yourshadowai.com/sign-up" class="block w-full py-3.5 rounded-xl bg-white text-black font-semibold text-center text-[0.875rem] hover:bg-white/90 transition-all mt-6">
            Hire this worker
          </a>
        </div>
      `;

      modal.classList.remove('hidden');
      modal.classList.add('flex');
      document.body.style.overflow = 'hidden';
    }

    function closeModal() {
      modal.classList.add('hidden');
      modal.classList.remove('flex');
      document.body.style.overflow = 'auto';
    }

    workerCards.forEach(card => {
      card.addEventListener('click', () => {
        const workerId = parseInt(card.dataset.workerId);
        openModal(workerId);
      });
    });

    closeModalBtn.addEventListener('click', closeModal);

    modal.addEventListener('click', (e) => {
      if (e.target === modal) {
        closeModal();
      }
    });

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && !modal.classList.contains('hidden')) {
        closeModal();
      }
    });

    filterAndSort();
  </script>
</Layout>
